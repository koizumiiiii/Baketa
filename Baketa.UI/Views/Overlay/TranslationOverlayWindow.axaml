<!-- 廃止予定警告を抑制: AR風翻訳UIへの移行中のため -->
<Window x:Class="Baketa.UI.Views.Overlay.TranslationOverlayWindow"
        xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:Baketa.UI.Views.Overlay"
        x:DataType="local:TranslationOverlayWindow"
        Width="300" Height="100"
        WindowStartupLocation="Manual"
        SystemDecorations="None"
        Background="Transparent"
        TransparencyLevelHint="Transparent"
        Topmost="True"
        ShowInTaskbar="False"
        CanResize="False"
        ExtendClientAreaToDecorationsHint="True"
        ExtendClientAreaChromeHints="NoChrome"
        ExtendClientAreaTitleBarHeightHint="-1">

    <Window.Styles>
        <Style Selector="Window">
            <Setter Property="Background" Value="Transparent"/>
        </Style>
    </Window.Styles>

    <!-- 翻訳オーバーレイコンテンツ -->
    <Border Name="OverlayBorder"
            Background="Black"
            BorderBrush="Gray"
            BorderThickness="1"
            CornerRadius="4"
            Padding="8"
            Opacity="0.9">

        <StackPanel Orientation="Vertical" Spacing="4">
            <!-- 原文テキスト（デバッグ時のみ表示） -->
            <TextBlock Name="OriginalTextBlock"
                     Text=""
                     FontSize="10"
                     Foreground="#888888"
                     TextWrapping="Wrap"
                     IsVisible="False"/>

            <!-- 翻訳テキスト（メイン表示） -->
            <TextBlock Name="TranslatedTextBlock"
                     Text=""
                     FontSize="14"
                     FontFamily="Segoe UI, Meiryo UI, Yu Gothic UI"
                     Foreground="White"
                     TextWrapping="Wrap"
                     TextAlignment="Left"/>
        </StackPanel>
    </Border>
</Window>