<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:vm="using:Baketa.UI.ViewModels"
        mc:Ignorable="d" d:DesignWidth="60" d:DesignHeight="280"
        x:Class="Baketa.UI.Views.MainOverlayView"
        x:DataType="vm:MainOverlayViewModel"
        Title="Baketa Overlay"
        Width="60"
        Height="280"
        WindowStartupLocation="Manual"
        ShowInTaskbar="False"
        Topmost="True"
        Background="Transparent"
        CanResize="False"
        SystemDecorations="None"
        ExtendClientAreaToDecorationsHint="True"
        ExtendClientAreaChromeHints="NoChrome"
        ExtendClientAreaTitleBarHeightHint="0">
  
  <Window.Resources>
    <!-- カラーリソース - 透過効果を削除して完全不透明に -->
    <SolidColorBrush x:Key="OverlayBackgroundBrush" Color="#FFFFFFFF"/>
    <SolidColorBrush x:Key="OverlayBorderBrush" Color="#FF404040"/>
    <SolidColorBrush x:Key="ButtonBackgroundBrush" Color="#FFF5F5F5"/>
    <SolidColorBrush x:Key="ButtonBorderBrush" Color="#FF808080"/>
    <SolidColorBrush x:Key="StatusBackgroundBrush" Color="#FFFFFFFF"/>
    <SolidColorBrush x:Key="StatusBorderBrush" Color="#FF404040"/>
    <SolidColorBrush x:Key="StatusInactiveBrush" Color="#FF605E5C"/>
    <SolidColorBrush x:Key="SeparatorBrush" Color="#FFD0D0D0"/>
    <Color x:Key="BoxShadowColor">#80000000</Color>
    
    <!-- Fluent Icons -->
    <StreamGeometry x:Key="PlayIcon">M8,5.14V19.14L19,12.14L8,5.14Z</StreamGeometry>
    <StreamGeometry x:Key="StopIcon">M6,6H18V18H6V6Z</StreamGeometry>
