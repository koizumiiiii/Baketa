      <!-- ã‚·ãƒ³ã‚°ãƒ«ã‚·ãƒ§ãƒƒãƒˆç¿»è¨³ãƒœã‚¿ãƒ³ -->
      <!-- ðŸ”¥ [ISSUE#163_PHASE5] ã‚·ãƒ³ã‚°ãƒ«ã‚·ãƒ§ãƒƒãƒˆç¿»è¨³æ©Ÿèƒ½è¿½åŠ  -->
      <Button Classes="menu-item"
              Command="{Binding ExecuteSingleshotCommand}"
              ToolTip.Tip="ã‚·ãƒ³ã‚°ãƒ«ã‚·ãƒ§ãƒƒãƒˆç¿»è¨³ã‚’å®Ÿè¡Œ"
