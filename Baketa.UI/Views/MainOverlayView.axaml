    <StreamGeometry x:Key="SettingsIcon">M12,15.5A3.5,3.5 0 0,1 8.5,12A3.5,3.5 0 0,1 12,8.5A3.5,3.5 0 0,1 15.5,12A3.5,3.5 0 0,1 12,15.5M19.43,12.97C19.47,12.65 19.5,12.33 19.5,12C19.5,11.67 19.47,11.34 19.43,11L21.54,9.37C21.73,9.22 21.78,8.95 21.66,8.73L19.66,5.27C19.54,5.05 19.27,4.96 19.05,5.05L16.56,6.05C16.04,5.66 15.5,5.32 14.87,5.07L14.5,2.42C14.46,2.18 14.25,2 14,2H10C9.75,2 9.54,2.18 9.5,2.42L9.13,5.07C8.5,5.32 7.96,5.66 7.44,6.05L4.95,5.05C4.73,4.96 4.46,5.05 4.34,5.27L2.34,8.73C2.22,8.95 2.27,9.22 2.46,9.37L4.57,11C4.53,11.34 4.5,11.67 4.5,12C4.5,12.33 4.53,12.65 4.57,12.97L2.46,14.63C2.27,14.78 2.22,15.05 2.34,15.27L4.34,18.73C4.46,18.95 4.73,19.03 4.95,18.95L7.44,17.94C7.96,18.34 8.5,18.68 9.13,18.93L9.5,21.58C9.54,21.82 9.75,22 10,22H14C14.25,22 14.46,21.82 14.5,21.58L14.87,18.93C15.5,18.68 16.04,18.34 16.56,17.94L19.05,18.95C19.27,19.03 19.54,18.95 19.66,18.73L21.66,15.27C21.78,15.05 21.73,14.78 21.54,14.63L19.43,12.97Z</StreamGeometry>
    <StreamGeometry x:Key="ChevronUpIcon">M7.41,15.41L12,10.83L16.59,15.41L18,14L12,8L6,14L7.41,15.41Z</StreamGeometry>
    <StreamGeometry x:Key="ChevronDownIcon">M7.41,8.58L12,13.17L16.59,8.58L18,10L12,16L6,10L7.41,8.58Z</StreamGeometry>
    <StreamGeometry x:Key="DismissIcon">M19,6.41L17.59,5L12,10.59L6.41,5L5,6.41L10.59,12L5,17.59L6.41,19L12,13.41L17.59,19L19,17.59L13.41,12L19,6.41Z</StreamGeometry>
  </Window.Resources>
  
  <Window.Styles>
    <!-- ボタンスタイル -->
    <Style Selector="Button.overlay-button">
      <Setter Property="Background" Value="{StaticResource ButtonBackgroundBrush}"/>
      <Setter Property="BorderBrush" Value="{StaticResource ButtonBorderBrush}"/>
      <Setter Property="BorderThickness" Value="1"/>
      <Setter Property="CornerRadius" Value="8"/>
      <Setter Property="Padding" Value="0"/>
      <Setter Property="HorizontalContentAlignment" Value="Center"/>
      <Setter Property="VerticalContentAlignment" Value="Center"/>
    </Style>
    
    <Style Selector="Button.overlay-button:hover">
      <Setter Property="Background" Value="{StaticResource ButtonBackgroundBrush}"/>
      <Setter Property="Opacity" Value="0.8"/>
    </Style>
    
    <Style Selector="Button.overlay-button:pressed">
      <Setter Property="Background" Value="{StaticResource ButtonBackgroundBrush}"/>
      <Setter Property="Opacity" Value="0.6"/>
    </Style>
    
    <Style Selector="Button.overlay-button.secondary">
      <Setter Property="Background" Value="#40606060"/>
      <Setter Property="BorderBrush" Value="#60606060"/>
    </Style>
    
    <Style Selector="Button.overlay-button.danger">
      <Setter Property="Background" Value="#40D13438"/>
      <Setter Property="BorderBrush" Value="#60D13438"/>
    </Style>
    
    <Style Selector="Button.overlay-button.collapsed">
      <Setter Property="Background" Value="#20FFFFFF"/>
      <Setter Property="BorderBrush" Value="#40FFFFFF"/>
      <Setter Property="CornerRadius" Value="4"/>
    </Style>
  </Window.Styles>

  <!-- メインオーバーレイ：αテスト向け基本実装 -->
  <Grid>
  <Border Name="MainOverlayBorder"
          Width="60"
          MinHeight="240"
          Background="{StaticResource OverlayBackgroundBrush}"
          CornerRadius="8"
          BoxShadow="0 4 8 0 #80000000"
          BorderBrush="{StaticResource OverlayBorderBrush}"
          BorderThickness="1"
          IsVisible="{Binding !IsCollapsed}">
    
    <StackPanel Orientation="Vertical" 
                Spacing="4" 
                Margin="6,8">
      
      <!-- 翻訳開始/停止ボタン -->
      <Button Name="StartStopButton"
              Width="48" Height="48"
              Classes="overlay-button"
              Command="{Binding StartStopCommand}"
              ToolTip.Tip="{Binding StartStopText}">
        <PathIcon Width="16" Height="16"
                  Data="{StaticResource PlayIcon}"/>
      </Button>
      
      <!-- 表示切り替えボタン -->
      <Button Name="VisibilityButton"
              Width="48" Height="48"
              Classes="overlay-button"
              Command="{Binding ShowHideCommand}"
              IsEnabled="{Binding ShowHideEnabled}"
              ToolTip.Tip="翻訳結果の表示/非表示">
        <PathIcon Width="16" Height="16"
                  Data="{StaticResource ViewIcon}"/>
      </Button>
      
      <!-- 設定ボタン -->
      <Button Name="SettingsButton"
              Width="48" Height="48"
              Classes="overlay-button"
              Command="{Binding SettingsCommand}"
              IsEnabled="{Binding SettingsEnabled}"
              ToolTip.Tip="設定">
        <PathIcon Width="16" Height="16"
                  Data="{StaticResource SettingsIcon}"/>
      </Button>
      
      <!-- ステータス表示 -->
      <Border Width="48" 
              Background="{StaticResource StatusBackgroundBrush}"
              BorderBrush="{StaticResource StatusBorderBrush}"
              BorderThickness="1"
              CornerRadius="4"
              Padding="4"
              Margin="0,8,0,0">
        <StackPanel Spacing="2">
          <TextBlock Text="状態"
                     FontSize="8"
                     HorizontalAlignment="Center"
                     Foreground="{StaticResource StatusInactiveBrush}"/>
          <TextBlock Text="{Binding CurrentStatus}"
                     FontSize="9"
                     FontWeight="Bold"
                     HorizontalAlignment="Center"
                     TextWrapping="Wrap"
                     Foreground="{StaticResource StatusInactiveBrush}"/>
        </StackPanel>
      </Border>
      
      <!-- 状態表示 -->
      <Border Name="StatusIndicator"
              Width="48" Height="48"
              CornerRadius="24"
              Background="{StaticResource StatusBackgroundBrush}"
              BorderBrush="{StaticResource StatusBorderBrush}"
              BorderThickness="2">
        <Ellipse Name="StatusCircle"
                 Width="20" Height="20"
                 Fill="{StaticResource StatusInactiveBrush}"/>
      </Border>
      
      <!-- 区切り線 -->
      <Rectangle Height="1" 
                 Fill="{StaticResource SeparatorBrush}"
                 Margin="12,8" 
                 Opacity="0.3"/>
      
      <!-- 折り畳みボタン -->
      <Button Name="FoldButton"
              Width="48" Height="48"
              Classes="overlay-button secondary"
              Command="{Binding FoldCommand}"
              ToolTip.Tip="折り畳み">
        <PathIcon Width="16" Height="16"
                  Data="{StaticResource ChevronUpIcon}"/>
      </Button>
      
      <!-- 終了ボタン -->
      <Button Name="ExitButton"
              Width="48" Height="48"
              Classes="overlay-button danger"
              Command="{Binding ExitCommand}"
              ToolTip.Tip="終了">
        <PathIcon Width="16" Height="16"
                  Data="{StaticResource DismissIcon}"/>
      </Button>
      
    </StackPanel>
  </Border>

  <!-- 折り畳み状態 -->
  <Border Name="CollapsedOverlayBorder"
          Width="48"
          Height="64"
          Background="{StaticResource OverlayBackgroundBrush}"
          CornerRadius="8"
          BoxShadow="0 4 8 0 #80000000"
          BorderBrush="{StaticResource OverlayBorderBrush}"
          BorderThickness="1"
          IsVisible="{Binding IsCollapsed}">
    
    <StackPanel Orientation="Vertical" 
                Spacing="4" 
                Margin="4">
      
      <!-- 状態表示のみ -->
      <Border Name="CollapsedStatusIndicator"
              Width="40" Height="40"
              CornerRadius="20"
              Background="{StaticResource StatusBackgroundBrush}"
              BorderBrush="{StaticResource StatusBorderBrush}"
              BorderThickness="2">
        <Ellipse Width="16" Height="16"
                 Fill="{StaticResource StatusInactiveBrush}"/>
      </Border>
      
      <!-- 展開ボタン -->
      <Button Name="ExpandButton"
              Width="40" Height="16"
              Classes="overlay-button collapsed"
              Command="{Binding FoldCommand}"
              ToolTip.Tip="展開">
        <PathIcon Width="12" Height="12"
                  Data="{StaticResource ChevronDownIcon}"/>
      </Button>
      
    </StackPanel>
  </Border>

  </Grid>

</Window>