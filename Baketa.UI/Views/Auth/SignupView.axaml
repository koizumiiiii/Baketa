<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="using:Baketa.UI.ViewModels.Auth"
        xmlns:converters="using:Baketa.UI.Converters"
        xmlns:local="using:Baketa.UI.Extensions"
        x:Class="Baketa.UI.Views.Auth.SignupView"
        x:DataType="vm:SignupViewModel"
        Title="Baketa - Sign Up"
        Width="420" Height="720"
        MinWidth="400" MinHeight="600"
        Icon="/Assets/Icons/baketa.ico"
        WindowStartupLocation="CenterScreen"
        CanResize="False">

    <Design.PreviewWith>
        <Border Padding="20" Width="400" Height="600">
            <!-- デザインタイム用のダミーデータ -->
        </Border>
    </Design.PreviewWith>

    <Window.Styles>
        <!-- Signup window specific styles -->
        <Style Selector="Button.oauth-button">
            <Setter Property="Height" Value="48" />
            <Setter Property="Margin" Value="0,4" />
            <Setter Property="HorizontalAlignment" Value="Stretch" />
            <Setter Property="HorizontalContentAlignment" Value="Left" />
            <Setter Property="VerticalContentAlignment" Value="Center" />
            <Setter Property="Padding" Value="16,0" />
            <Setter Property="CornerRadius" Value="8" />
            <Setter Property="Background" Value="White" />
            <Setter Property="BorderBrush" Value="#E0E0E0" />
            <Setter Property="BorderThickness" Value="1" />
        </Style>

        <Style Selector="Button.oauth-button:pointerover">
            <Setter Property="Background" Value="#FAFAFA" />
            <Setter Property="BorderBrush" Value="{DynamicResource SystemAccentColor}" />
        </Style>
        
        <Style Selector="Button.primary-button">
            <Setter Property="Height" Value="44" />
            <Setter Property="Margin" Value="0,12,0,8" />
            <Setter Property="HorizontalAlignment" Value="Stretch" />
            <Setter Property="HorizontalContentAlignment" Value="Center" />
            <Setter Property="VerticalContentAlignment" Value="Center" />
            <Setter Property="CornerRadius" Value="8" />
            <Setter Property="FontWeight" Value="SemiBold" />
            <Setter Property="FontSize" Value="14" />
            <Setter Property="Background" Value="#2563EB" />
            <Setter Property="Foreground" Value="#FFFFFF" />
            <Setter Property="BorderThickness" Value="0" />
            <Setter Property="BorderBrush" Value="Transparent" />
        </Style>

        <Style Selector="Button.primary-button:pointerover">
            <Setter Property="Background" Value="#1D4ED8" />
            <Setter Property="Foreground" Value="#FFFFFF" />
        </Style>

        <Style Selector="Button.primary-button:pressed">
            <Setter Property="Background" Value="#1E40AF" />
            <Setter Property="Foreground" Value="#FFFFFF" />
        </Style>

        <Style Selector="Button.primary-button:disabled">
            <Setter Property="Background" Value="#93C5FD" />
            <Setter Property="Foreground" Value="#FFFFFF" />
        </Style>
        
        <Style Selector="TextBox.input-field">
            <Setter Property="Height" Value="40" />
            <Setter Property="Margin" Value="0,4" />
            <Setter Property="Padding" Value="12,8" />
            <Setter Property="CornerRadius" Value="6" />
            <Setter Property="FontSize" Value="14" />
        </Style>
        
        <Style Selector="CheckBox.agreement-checkbox">
            <Setter Property="FontSize" Value="13" />
            <Setter Property="Margin" Value="0,4" />
        </Style>
    </Window.Styles>

    <Border Background="{DynamicResource BackgroundBrush}">
        <Grid RowDefinitions="Auto,*,Auto">
            <!-- Header -->
            <Border Grid.Row="0" Classes="navigationHeader" Padding="24,20">
                <StackPanel HorizontalAlignment="Center" Spacing="12">
                    <Image Source="/Assets/Icons/baketa-48.png"
                           Width="48" Height="48"
                           HorizontalAlignment="Center"/>
                    <TextBlock Text="{local:Localize Auth_Signup_Title}"
                               FontSize="20" FontWeight="SemiBold"
                               HorizontalAlignment="Center"
                               Foreground="{DynamicResource TextPrimaryBrush}"/>
                </StackPanel>
            </Border>
            
            <!-- Main Content -->
            <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
                <StackPanel Spacing="16" Margin="24,16">
                    
                    <!-- OAuth Signup Buttons -->
                    <StackPanel Spacing="6">
                        <Button Classes="oauth-button"
                                Command="{Binding SignupWithGoogleCommand}"
                                IsEnabled="{Binding !IsLoading}">
                            <StackPanel Orientation="Horizontal" Spacing="12" VerticalAlignment="Center">
                                <PathIcon Data="M22.56 12.25c0-.78-.07-1.53-.2-2.25H12v4.26h5.92c-.26 1.37-1.04 2.53-2.21 3.31v2.77h3.57c2.08-1.92 3.28-4.74 3.28-8.09z M12 23c2.97 0 5.46-.98 7.28-2.66l-3.57-2.77c-.98.66-2.23 1.06-3.71 1.06-2.86 0-5.29-1.93-6.16-4.53H2.18v2.84C3.99 20.53 7.7 23 12 23z M5.84 14.09c-.22-.66-.35-1.36-.35-2.09s.13-1.43.35-2.09V7.07H2.18C1.43 8.55 1 10.22 1 12s.43 3.45 1.18 4.93l2.85-2.22.81-.62z M12 5.38c1.62 0 3.06.56 4.21 1.64l3.15-3.15C17.45 2.09 14.97 1 12 1 7.7 1 3.99 3.47 2.18 7.07l3.66 2.84c.87-2.6 3.3-4.53 6.16-4.53z"
                                          Width="20" Height="20"
                                          Foreground="#4285F4"/>
                                <TextBlock Text="{local:Localize Auth_Signup_Google}" FontSize="14" VerticalAlignment="Center"/>
                            </StackPanel>
                        </Button>

                        <Button Classes="oauth-button"
                                Command="{Binding SignupWithDiscordCommand}"
                                IsEnabled="{Binding !IsLoading}">
                            <StackPanel Orientation="Horizontal" Spacing="12" VerticalAlignment="Center">
                                <PathIcon Data="M20.317 4.37a19.791 19.791 0 0 0-4.885-1.515.074.074 0 0 0-.079.037c-.21.375-.444.864-.608 1.25a18.27 18.27 0 0 0-5.487 0 12.64 12.64 0 0 0-.617-1.25.077.077 0 0 0-.079-.037A19.736 19.736 0 0 0 3.677 4.37a.07.07 0 0 0-.032.027C.533 9.046-.32 13.58.099 18.057a.082.082 0 0 0 .031.057 19.9 19.9 0 0 0 5.993 3.03.078.078 0 0 0 .084-.028 14.09 14.09 0 0 0 1.226-1.994.076.076 0 0 0-.041-.106 13.107 13.107 0 0 1-1.872-.892.077.077 0 0 1-.008-.128 10.2 10.2 0 0 0 .372-.292.074.074 0 0 1 .077-.01c3.928 1.793 8.18 1.793 12.062 0a.074.074 0 0 1 .078.01c.12.098.246.198.373.292a.077.077 0 0 1-.006.127 12.299 12.299 0 0 1-1.873.892.077.077 0 0 0-.041.107c.36.698.772 1.362 1.225 1.993a.076.076 0 0 0 .084.028 19.839 19.839 0 0 0 6.002-3.03.077.077 0 0 0 .032-.054c.5-5.177-.838-9.674-3.549-13.66a.061.061 0 0 0-.031-.03zM8.02 15.33c-1.183 0-2.157-1.085-2.157-2.419 0-1.333.956-2.419 2.157-2.419 1.21 0 2.176 1.096 2.157 2.42 0 1.333-.956 2.418-2.157 2.418zm7.975 0c-1.183 0-2.157-1.085-2.157-2.419 0-1.333.955-2.419 2.157-2.419 1.21 0 2.176 1.096 2.157 2.42 0 1.333-.946 2.418-2.157 2.418z"
                                          Width="20" Height="20"
                                          Foreground="#5865F2"/>
                                <TextBlock Text="{local:Localize Auth_Signup_Discord}" FontSize="14" VerticalAlignment="Center"/>
                            </StackPanel>
                        </Button>

                        <Button Classes="oauth-button"
                                Command="{Binding SignupWithTwitchCommand}"
                                IsEnabled="{Binding !IsLoading}">
                            <StackPanel Orientation="Horizontal" Spacing="12" VerticalAlignment="Center">
                                <PathIcon Data="M11.571 4.714h1.715v5.143H11.57zm4.715 0H18v5.143h-1.714zM6 0L1.714 4.286v15.428h5.143V24l4.286-4.286h3.428L22.286 12V0zm14.571 11.143l-3.428 3.428h-3.429l-3 3v-3H6.857V1.714h13.714Z"
                                          Width="20" Height="20"
                                          Foreground="#9146FF"/>
                                <TextBlock Text="{local:Localize Auth_Signup_Twitch}" FontSize="14" VerticalAlignment="Center"/>
                            </StackPanel>
                        </Button>
                    </StackPanel>
                    
                    <!-- Divider -->
                    <Grid ColumnDefinitions="*,Auto,*" Margin="0,8">
                        <Rectangle Grid.Column="0" Height="1" 
                                   Fill="{DynamicResource BorderBrush}" 
                                   VerticalAlignment="Center"/>
                        <TextBlock Grid.Column="1" Text="{local:Localize Auth_Signup_OrEmail}"
                                   Margin="12,0" FontSize="12"
                                   Foreground="{DynamicResource TextSecondaryBrush}"/>
                        <Rectangle Grid.Column="2" Height="1" 
                                   Fill="{DynamicResource BorderBrush}" 
                                   VerticalAlignment="Center"/>
                    </Grid>
                    
                    <!-- Email/Password Form -->
                    <StackPanel Spacing="8">
                        <StackPanel>
                            <TextBlock Text="{local:Localize Auth_Signup_DisplayName}"
                                       FontSize="13" FontWeight="Medium"
                                       Margin="0,0,0,2"
                                       Foreground="{DynamicResource TextPrimaryBrush}"/>
                            <TextBox Classes="input-field"
                                     Text="{Binding DisplayName}"
                                     Watermark="{local:Localize Auth_Signup_DisplayNamePlaceholder}"
                                     KeyboardNavigation.TabIndex="1"/>
                        </StackPanel>
                        
                        <StackPanel>
                            <TextBlock Text="{local:Localize Auth_Signup_Email}"
                                       FontSize="13" FontWeight="Medium"
                                       Margin="0,0,0,2"
                                       Foreground="{DynamicResource TextPrimaryBrush}"/>
                            <TextBox Classes="input-field"
                                     Text="{Binding Email}"
                                     Watermark="{local:Localize Auth_Login_EmailPlaceholder}"
                                     KeyboardNavigation.TabIndex="2"/>
                        </StackPanel>
                        
                        <StackPanel>
                            <TextBlock Text="{local:Localize Auth_Signup_Password}"
                                       FontSize="13" FontWeight="Medium"
                                       Margin="0,0,0,2"
                                       Foreground="{DynamicResource TextPrimaryBrush}"/>
                            <TextBox Classes="input-field"
                                     Text="{Binding Password}"
                                     PasswordChar="•"
                                     Watermark="{local:Localize Auth_Signup_PasswordPlaceholder}"
                                     KeyboardNavigation.TabIndex="3"/>
                            <!-- Password Strength Indicator -->
                            <Grid ColumnDefinitions="*,Auto" Margin="2,6,0,0">
                                <!-- Strength Bar -->
                                <StackPanel Grid.Column="0" Orientation="Horizontal" Spacing="4">
                                    <Border Width="50" Height="4" CornerRadius="2"
                                            Background="{Binding PasswordStrengthBrush}"/>
                                    <Border Width="50" Height="4" CornerRadius="2"
                                            Background="{Binding PasswordStrengthBrush}"
                                            IsVisible="{Binding PasswordStrength, Converter={x:Static converters:PasswordStrengthConverters.IsMediumOrHigher}}"/>
                                    <Border Width="50" Height="4" CornerRadius="2"
                                            Background="{Binding PasswordStrengthBrush}"
                                            IsVisible="{Binding PasswordStrength, Converter={x:Static converters:PasswordStrengthConverters.IsStrong}}"/>
                                </StackPanel>
                                <!-- Strength Text -->
                                <TextBlock Grid.Column="1"
                                           Text="{Binding PasswordStrengthMessage}"
                                           FontSize="11"
                                           FontWeight="Medium"
                                           Margin="8,0,0,0"
                                           VerticalAlignment="Center"
                                           Foreground="{Binding PasswordStrengthBrush}"/>
                            </Grid>
                            <!-- Password Requirements (パスワード入力直下) -->
                            <TextBlock Text="{local:Localize Auth_Signup_PasswordRequirement}"
                                       FontSize="11"
                                       Margin="2,4,0,0"
                                       Foreground="{DynamicResource TextSecondaryBrush}"/>
                        </StackPanel>

                        <StackPanel>
                            <TextBlock Text="{local:Localize Auth_Signup_ConfirmPassword}"
                                       FontSize="13" FontWeight="Medium"
                                       Margin="0,0,0,2"
                                       Foreground="{DynamicResource TextPrimaryBrush}"/>
                            <TextBox Classes="input-field"
                                     Text="{Binding ConfirmPassword}"
                                     PasswordChar="•"
                                     Watermark="{local:Localize Auth_Signup_ConfirmPasswordPlaceholder}"
                                     KeyboardNavigation.TabIndex="4"/>
                        </StackPanel>
                    </StackPanel>
                    
                    <!-- Agreement Checkboxes -->
                    <StackPanel Spacing="6" Margin="0,8,0,0">
                        <CheckBox Classes="agreement-checkbox"
                                  IsChecked="{Binding AcceptTerms}"
                                  KeyboardNavigation.TabIndex="5">
                            <TextBlock TextWrapping="Wrap">
                                <Run Text="{local:Localize Auth_Signup_TermsAgree}"/>
                                <Button Classes="link" Content="{local:Localize Auth_Signup_Terms}" Padding="0" FontSize="13"
                                        Command="{Binding OpenTermsCommand}"/>
                            </TextBlock>
                        </CheckBox>

                        <CheckBox Classes="agreement-checkbox"
                                  IsChecked="{Binding AcceptPrivacyPolicy}"
                                  KeyboardNavigation.TabIndex="6">
                            <TextBlock TextWrapping="Wrap">
                                <Run Text="{local:Localize Auth_Signup_TermsAgree}"/>
                                <Button Classes="link" Content="{local:Localize Auth_Signup_Privacy}" Padding="0" FontSize="13"
                                        Command="{Binding OpenPrivacyPolicyCommand}"/>
                            </TextBlock>
                        </CheckBox>
                    </StackPanel>

                    <!-- Success Message (緑色・ボタンの上に配置) -->
                    <Border IsVisible="{Binding SuccessMessage, Converter={x:Static StringConverters.IsNotNullOrEmpty}}"
                            Background="#E8F5E9"
                            BorderBrush="#4CAF50"
                            BorderThickness="1"
                            CornerRadius="6"
                            Padding="12,8"
                            Margin="0,8,0,0">
                        <Grid ColumnDefinitions="Auto,*">
                            <PathIcon Grid.Column="0"
                                      Data="M12,2C17.53,2 22,6.47 22,12C22,17.53 17.53,22 12,22C6.47,22 2,17.53 2,12C2,6.47 6.47,2 12,2M10,17L5,12L6.41,10.58L10,14.17L17.59,6.58L19,8L10,17Z"
                                      Width="16" Height="16"
                                      Margin="0,2,8,0"
                                      VerticalAlignment="Top"
                                      Foreground="#2E7D32"/>
                            <TextBlock Grid.Column="1"
                                       Text="{Binding SuccessMessage}"
                                       TextWrapping="Wrap"
                                       FontSize="13"
                                       Foreground="#2E7D32"/>
                        </Grid>
                    </Border>

                    <!-- Error Message (赤色・ボタンの上に配置) -->
                    <Border IsVisible="{Binding ErrorMessage, Converter={x:Static StringConverters.IsNotNullOrEmpty}}"
                            Background="{DynamicResource ErrorBackgroundBrush}"
                            BorderBrush="{DynamicResource ErrorBorderBrush}"
                            BorderThickness="1"
                            CornerRadius="6"
                            Padding="12,8"
                            Margin="0,8,0,0">
                        <Grid ColumnDefinitions="Auto,*">
                            <PathIcon Grid.Column="0"
                                      Data="M12,2C17.53,2 22,6.47 22,12C22,17.53 17.53,22 12,22C6.47,22 2,17.53 2,12C2,6.47 6.47,2 12,2M13,17V15H11V17H13M13,13V7H11V13H13Z"
                                      Width="16" Height="16"
                                      Margin="0,2,8,0"
                                      VerticalAlignment="Top"
                                      Foreground="{DynamicResource ErrorForegroundBrush}"/>
                            <TextBlock Grid.Column="1"
                                       Text="{Binding ErrorMessage}"
                                       TextWrapping="Wrap"
                                       FontSize="13"
                                       Foreground="{DynamicResource ErrorForegroundBrush}"/>
                        </Grid>
                    </Border>

                    <!-- Loading Indicator (ボタンの上に配置) -->
                    <StackPanel IsVisible="{Binding IsLoading}"
                                Orientation="Horizontal"
                                HorizontalAlignment="Center"
                                Spacing="8"
                                Margin="0,8">
                        <PathIcon Data="M12,1A11,11 0 1,0 23,12A11,11 0 0,0 12,1M12,19A7,7 0 1,1 19,12A7,7 0 0,1 12,19Z"
                                  Width="16" Height="16"
                                  Classes="spin"/>
                        <TextBlock Text="{local:Localize Auth_Signup_Loading}"
                                   FontSize="13"
                                   Foreground="{DynamicResource TextSecondaryBrush}"/>
                    </StackPanel>

                    <!-- Signup Button -->
                    <!-- 注意: IsEnabledはCommandのCanExecuteで自動制御されるため明示的なバインドは不要 -->
                    <Button Classes="primary-button"
                            Command="{Binding SignupWithEmailCommand}"
                            Content="{local:Localize Auth_Signup_Button}"
                            KeyboardNavigation.TabIndex="7"/>
                </StackPanel>
            </ScrollViewer>
            
            <!-- Footer -->
            <Border Grid.Row="2" Classes="statusBar" Padding="24,16">
                <StackPanel HorizontalAlignment="Center" Spacing="6">
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                        <TextBlock Text="{local:Localize Auth_Signup_LoginPrompt}"
                                   VerticalAlignment="Center"
                                   Foreground="{DynamicResource TextSecondaryBrush}"
                                   FontSize="13"/>
                        <Button Classes="link"
                                Command="{Binding NavigateToLoginCommand}"
                                Content="{local:Localize Auth_Signup_LoginLink}"
                                Padding="2,0"
                                FontWeight="Medium"
                                FontSize="13"
                                VerticalAlignment="Center"/>
                    </StackPanel>

                    <TextBlock Text="{local:Localize App_Copyright}"
                               FontSize="11"
                               HorizontalAlignment="Center"
                               Foreground="{DynamicResource TextTertiaryBrush}"/>
                </StackPanel>
            </Border>
        </Grid>
    </Border>
</Window>