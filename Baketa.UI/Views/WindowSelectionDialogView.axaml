<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:vm="using:Baketa.UI.ViewModels"
        xmlns:converters="using:Baketa.UI.Converters"
        xmlns:local="using:Baketa.UI.Extensions"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="600"
        x:Class="Baketa.UI.Views.WindowSelectionDialogView"
        x:DataType="vm:WindowSelectionDialogViewModel"
        Title="{local:Localize WindowSelection_Title}"
        Width="800"
        Height="600"
        WindowStartupLocation="CenterScreen"
        CanResize="False"
        ShowInTaskbar="False"
        Topmost="True">
  
  <Window.Resources>
    <!-- ã‚³ãƒ³ãƒãƒ¼ã‚¿ãƒ¼ -->
    <converters:Base64ToImageConverter x:Key="Base64ToImageConverter"/>
    <converters:StringNotNullToBoolConverter x:Key="StringNotNullToBoolConverter"/>
    <converters:StringNullToBoolConverter x:Key="StringNullToBoolConverter"/>

    <!-- #245: ãƒ‡ã‚¶ã‚¤ãƒ³ãƒˆãƒ¼ã‚¯ãƒ³ã‚’ä½¿ç”¨ã—ãŸã‚«ãƒ©ãƒ¼ãƒªã‚½ãƒ¼ã‚¹ -->
    <!-- ThemeDictionarieså†…ã®Colorã¯DynamicResourceã§ã‚¢ã‚¯ã‚»ã‚¹ã™ã‚‹å¿…è¦ãŒã‚ã‚‹ -->
    <SolidColorBrush x:Key="DialogBackgroundBrush" Color="{DynamicResource SettingsSidebarBackgroundColor}"/>
    <SolidColorBrush x:Key="WindowItemBackgroundBrush" Color="{DynamicResource SettingsContentBackgroundColor}"/>
    <SolidColorBrush x:Key="WindowItemBorderBrush" Color="{DynamicResource SettingsBorderColor}"/>
    <SolidColorBrush x:Key="WindowItemHoverBrush" Color="{DynamicResource SettingsSelectedColor}"/>
    <SolidColorBrush x:Key="WindowItemSelectedBrush" Color="{DynamicResource SettingsSelectedColor}"/>
    <SolidColorBrush x:Key="ButtonPrimaryBrush" Color="{DynamicResource SettingsAccentColor}"/>
    <SolidColorBrush x:Key="ButtonSecondaryBrush" Color="{DynamicResource SettingsCardBackgroundColor}"/>
    
    <!-- ã‚¢ã‚¤ã‚³ãƒ³ã¯FluentIcons.axamlã‹ã‚‰ã‚°ãƒ­ãƒ¼ãƒãƒ«å‚ç…§ -->
  </Window.Resources>

  <Window.Styles>
    <!-- ðŸ”¥ [ISSUE#171] ã‚¦ã‚£ãƒ³ãƒ‰ã‚¦ã‚¢ã‚¤ãƒ†ãƒ ã®ã‚¹ã‚¿ã‚¤ãƒ«ï¼ˆGeminiæŽ¨å¥¨: Local valuesã‚’å‰Šé™¤ã—ã¦Styleã§ç®¡ç†ï¼‰ -->

    <!-- ãƒ‡ãƒ•ã‚©ãƒ«ãƒˆçŠ¶æ…‹ -->
    <Style Selector="Border.WindowItem">
      <Setter Property="Background" Value="{StaticResource WindowItemBackgroundBrush}"/>
      <Setter Property="BorderBrush" Value="{StaticResource WindowItemBorderBrush}"/>
      <Setter Property="BorderThickness" Value="1"/>
      <Setter Property="CornerRadius" Value="8"/>
      <Setter Property="Margin" Value="8"/>
      <Setter Property="Padding" Value="12"/>
      <Setter Property="Cursor" Value="Hand"/>
    </Style>

    <!-- ãƒ›ãƒãƒ¼çŠ¶æ…‹ -->
    <Style Selector="Border.WindowItem:pointerover">
      <Setter Property="Background" Value="{StaticResource WindowItemHoverBrush}"/>
      <Setter Property="BorderBrush" Value="{StaticResource SettingsAccentBrush}"/>
      <Setter Property="BorderThickness" Value="2"/>
    </Style>

    <!-- æŠ¼ä¸‹çŠ¶æ…‹ -->
    <Style Selector="Border.WindowItem:pressed">
      <Setter Property="Background" Value="{StaticResource WindowItemSelectedBrush}"/>
      <Setter Property="BorderBrush" Value="{StaticResource SettingsAccentBrush}"/>
      <Setter Property="BorderThickness" Value="2"/>
    </Style>

    <!-- é¸æŠžæ¸ˆã¿çŠ¶æ…‹ï¼ˆæœ€å„ªå…ˆï¼‰ -->
    <Style Selector="Border.WindowItem.IsCurrentlySelected">
      <Setter Property="BorderBrush" Value="{StaticResource SettingsSuccessBrush}"/>
      <Setter Property="BorderThickness" Value="3"/>
      <Setter Property="Background" Value="{StaticResource SettingsSuccessBackground}"/>
    </Style>
  </Window.Styles>

  <Grid Background="{StaticResource DialogBackgroundBrush}">
    <Grid.RowDefinitions>
      <RowDefinition Height="Auto"/>
      <RowDefinition Height="*"/>
      <RowDefinition Height="Auto"/>
    </Grid.RowDefinitions>

    <!-- ãƒ˜ãƒƒãƒ€ãƒ¼ -->
    <Border Grid.Row="0"
            Background="{StaticResource SettingsContentBackground}"
            BorderBrush="{StaticResource WindowItemBorderBrush}"
            BorderThickness="0,0,0,1"
            Padding="20">
      <Grid>
        <Grid.ColumnDefinitions>
          <ColumnDefinition Width="*"/>
          <ColumnDefinition Width="Auto"/>
        </Grid.ColumnDefinitions>
        
        <StackPanel Grid.Column="0">
          <TextBlock Text="{local:Localize WindowSelection_Header}"
                     FontSize="18"
                     FontWeight="Medium"
                     Foreground="{StaticResource SettingsTextPrimary}"/>
          <TextBlock Text="{local:Localize WindowSelection_Subtitle}"
                     FontSize="12"
                     Foreground="{StaticResource SettingsTextSecondary}"
                     Margin="0,4,0,0"/>
        </StackPanel>
        
        <Button Grid.Column="1"
                Width="40" Height="32"
                Background="{StaticResource SettingsCardBackground}"
                BorderBrush="{StaticResource SettingsBorderBrush}"
                BorderThickness="1"
                CornerRadius="6"
                Command="{Binding RefreshCommand}"
                ToolTip.Tip="{local:Localize WindowSelection_Refresh}">
          <Button.Styles>
            <Style Selector="Button:pointerover">
              <Setter Property="Background" Value="{StaticResource SettingsHoverBackground}"/>
              <Setter Property="BorderBrush" Value="{StaticResource SettingsAccentBrush}"/>
            </Style>
            <Style Selector="Button:pressed">
              <Setter Property="Background" Value="{StaticResource SettingsSelectedBackground}"/>
              <Setter Property="BorderBrush" Value="{StaticResource SettingsAccentBrush}"/>
            </Style>
          </Button.Styles>
          <PathIcon Width="16" Height="16"
                    Data="{StaticResource RefreshIcon}"
                    Foreground="{StaticResource SettingsAccentBrush}"/>
        </Button>
      </Grid>
    </Border>

    <!-- ã‚¦ã‚£ãƒ³ãƒ‰ã‚¦ãƒªã‚¹ãƒˆ -->
    <ScrollViewer Grid.Row="1" 
                  Padding="20"
                  VerticalScrollBarVisibility="Auto">
      
      <Grid>
        <!-- ãƒ­ãƒ¼ãƒ‡ã‚£ãƒ³ã‚°è¡¨ç¤º -->
        <StackPanel IsVisible="{Binding IsLoading}"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center">
          <ProgressBar IsIndeterminate="True"
                       Width="200"
                       Height="4"/>
          <TextBlock Text="{local:Localize WindowSelection_Searching}"
                     FontSize="14"
                     Foreground="{StaticResource SettingsTextSecondary}"
                     HorizontalAlignment="Center"
                     Margin="0,10,0,0"/>
        </StackPanel>

        <!-- ã‚¦ã‚£ãƒ³ãƒ‰ã‚¦ãƒªã‚¹ãƒˆ - ã‚¿ã‚¤ãƒ«åž‹è¡¨ç¤º -->
        <ItemsControl x:Name="AvailableWindowsList"
                      ItemsSource="{Binding AvailableWindows}"
                      IsVisible="{Binding !IsLoading}">
          <ItemsControl.ItemsPanel>
            <ItemsPanelTemplate>
              <WrapPanel Orientation="Horizontal" ItemWidth="180" ItemHeight="150"/>
            </ItemsPanelTemplate>
          </ItemsControl.ItemsPanel>
          
          <ItemsControl.ItemTemplate>
            <DataTemplate>
              <!-- ðŸ”¥ [ISSUE#171] é¸æŠžæ¸ˆã¿ã‚¦ã‚£ãƒ³ãƒ‰ã‚¦ã«æž è¡¨ç¤ºï¼ˆGeminiæŽ¨å¥¨: Local valueså‰Šé™¤ã€Styleã§ç®¡ç†ï¼‰ -->
              <Border x:Name="WindowItemBorder"
                      Classes="WindowItem"
                      Classes.IsCurrentlySelected="{Binding IsCurrentlySelected}"
                      PointerPressed="OnWindowItemClick">
                
                <Grid>
                  <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                  </Grid.RowDefinitions>

                  <!-- ã‚µãƒ ãƒã‚¤ãƒ«ã¨é¸æŠžçŠ¶æ…‹ -->
                  <Grid Grid.Row="0">
                    <Border Width="120" Height="80"
                            Background="{StaticResource SettingsCardBackground}"
                            CornerRadius="6"
                            HorizontalAlignment="Center"
                            ClipToBounds="True">
                      <Grid>
                        <!-- ã‚µãƒ ãƒã‚¤ãƒ«ç”»åƒ -->
                        <Image Source="{Binding ThumbnailBase64, Converter={StaticResource Base64ToImageConverter}}"
                               Stretch="UniformToFill"
                               IsVisible="{Binding ThumbnailBase64, Converter={StaticResource StringNotNullToBoolConverter}}"/>
                        
                        <!-- ãƒ•ã‚©ãƒ¼ãƒ«ãƒãƒƒã‚¯ã‚¢ã‚¤ã‚³ãƒ³ -->
                        <PathIcon Width="24" Height="24"
                                  Data="{StaticResource WindowThumbnailIcon}"
                                  Foreground="{StaticResource SettingsTextMuted}"
                                  IsVisible="{Binding ThumbnailBase64, Converter={StaticResource StringNullToBoolConverter}}"/>
                      </Grid>
                    </Border>
                    
                    <!-- é¸æŠžçŠ¶æ…‹ã‚¤ãƒ³ã‚¸ã‚±ãƒ¼ã‚¿ãƒ¼ - UltraThinkä¿®æ­£ç‰ˆ: è¤‡é›‘ãƒã‚¤ãƒ³ãƒ‡ã‚£ãƒ³ã‚°ã‚’å®‰å…¨åŒ– -->
                    <Ellipse Width="16" Height="16"
                             Fill="{StaticResource SettingsAccentBrush}"
                             HorizontalAlignment="Right"
                             VerticalAlignment="Top"
                             Margin="0,-4,-4,0"
                             IsVisible="False"
                             x:Name="SelectionIndicator"/>
                  </Grid>

                  <!-- ã‚¦ã‚£ãƒ³ãƒ‰ã‚¦æƒ…å ± -->
                  <StackPanel Grid.Row="1"
                              VerticalAlignment="Center"
                              Margin="0,8">
                    <TextBlock Text="{Binding Title}"
                               FontSize="12"
                               FontWeight="Medium"
                               Foreground="{StaticResource SettingsTextPrimary}"
                               TextTrimming="CharacterEllipsis"
                               TextWrapping="Wrap"
                               MaxLines="2"
                               HorizontalAlignment="Center"
                               TextAlignment="Center"/>
                  </StackPanel>

                  <!-- çŠ¶æ…‹è¡¨ç¤º -->
                  <StackPanel Grid.Row="2"
                              HorizontalAlignment="Center">
                    <!-- æœ€å°åŒ–çŠ¶æ…‹ã®ã¿è¡¨ç¤º -->
                    <Border CornerRadius="10"
                            Padding="8,2"
                            Background="{StaticResource SettingsWarningBrush}"
                            IsVisible="{Binding IsMinimized}">
                      <StackPanel Orientation="Horizontal" Spacing="4">
                        <PathIcon Width="8" Height="8"
                                  Data="{StaticResource MinimizedIcon}"
                                  Foreground="White"/>
                        <TextBlock Text="{local:Localize WindowSelection_Minimized}"
                                   FontSize="10"
                                   Foreground="White"
                                   FontWeight="Medium"/>
                      </StackPanel>
                    </Border>
                  </StackPanel>
                </Grid>
              </Border>
            </DataTemplate>
          </ItemsControl.ItemTemplate>
        </ItemsControl>

        <!-- ç©ºã®çŠ¶æ…‹ - UltraThinkä¿®æ­£ç‰ˆ: è¤‡é›‘ãƒã‚¤ãƒ³ãƒ‡ã‚£ãƒ³ã‚°ç°¡ç´ åŒ– -->
        <StackPanel x:Name="EmptyStatePanel"
                    IsVisible="False"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center">
          <TextBlock Text="{local:Localize WindowSelection_NoWindows}"
                     FontSize="14"
                     Foreground="{StaticResource SettingsTextSecondary}"
                     HorizontalAlignment="Center"/>
          <Button Content="{local:Localize WindowSelection_Update}"
                  Command="{Binding RefreshCommand}"
                  Margin="0,10,0,0"
                  HorizontalAlignment="Center"/>
        </StackPanel>
      </Grid>
    </ScrollViewer>

    <!-- ãƒ•ãƒƒã‚¿ãƒ¼ -->
    <Border Grid.Row="2"
            Background="{StaticResource SettingsContentBackground}"
            BorderBrush="{StaticResource WindowItemBorderBrush}"
            BorderThickness="0,1,0,0"
            Padding="20">
      <StackPanel Orientation="Horizontal"
                  HorizontalAlignment="Right"
                  Spacing="12">
        <Button Content="{local:Localize WindowSelection_Cancel}"
                Width="100" Height="32"
                Background="{StaticResource ButtonSecondaryBrush}"
                Foreground="{StaticResource SettingsTextPrimary}"
                Command="{Binding CancelCommand}"/>
        <!-- ðŸ”¥ [ISSUE#225] CommandParameterã‚’SelectedWindowViewModelï¼ˆWindowInfoViewModelåž‹ï¼‰ã«ä¿®æ­£ -->
        <Button Content="{local:Localize WindowSelection_Select}"
                Width="100" Height="32"
                Background="{StaticResource ButtonPrimaryBrush}"
                Foreground="White"
                IsEnabled="{Binding CanSelect}"
                Command="{Binding SelectWindowCommand}"
                CommandParameter="{Binding SelectedWindowViewModel}"/>
      </StackPanel>
    </Border>
  </Grid>
</Window>