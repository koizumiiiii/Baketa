<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        x:Class="Baketa.UI.Views.LoadingOverlayView"
        Title="Baketa Loading"
        WindowState="Normal"
        WindowStartupLocation="CenterScreen"
        CanResize="false"
        ShowInTaskbar="false"
        Topmost="true"
        Width="300"
        Height="120"
        Background="Transparent"
        SystemDecorations="None">

  <Border Background="#E0000000" 
          CornerRadius="10" 
          Margin="10">
    <StackPanel Orientation="Vertical" 
                HorizontalAlignment="Center" 
                VerticalAlignment="Center"
                Spacing="15">
      
      <!-- ローディングアイコン -->
      <TextBlock Text="⏳" 
                 FontSize="36"
                 HorizontalAlignment="Center"
                 Foreground="White"/>
      
      <!-- ローディングテキスト -->
      <TextBlock Text="読み込み中"
                 FontSize="16"
                 FontWeight="Medium"
                 HorizontalAlignment="Center"
                 Foreground="White"/>
                 
    </StackPanel>
  </Border>

</Window>