<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="using:Baketa.UI.ViewModels"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="Baketa.UI.Views.SettingsView"
             x:CompileBindings="False">
    
    <Design.DataContext>
        <vm:SettingsViewModel/>
    </Design.DataContext>
    
    <Grid RowDefinitions="Auto,*,Auto" Margin="20">
        <!-- ヘッダー -->
        <StackPanel Grid.Row="0" Spacing="10" Margin="0,0,0,20">
            <TextBlock Text="設定" 
                       Classes="TitleTextBlockStyle"
                       FontSize="24" 
                       FontWeight="Bold" 
                       Margin="0,0,0,10"/>
            <TextBlock Text="Baketaアプリケーションの動作をカスタマイズします。" 
                       TextWrapping="Wrap"
                       Margin="0,0,0,10"/>
        </StackPanel>
        
        <!-- メインコンテンツ -->
        <Grid Grid.Row="1" ColumnDefinitions="220,*">
            <!-- カテゴリナビゲーション -->
            <Border Grid.Column="0" 
                    Classes="card" 
                    Margin="0,0,15,0">
                <ListBox x:Name="CategoryListBox"
                         SelectedIndex="0"
                         Background="Transparent"
                         Padding="5">
                    <!-- 一般設定 -->
                    <ListBoxItem x:Name="GeneralSettingItem">
                        <StackPanel Orientation="Horizontal" Spacing="10">
                            <!-- <PathIcon Data="{StaticResource SettingsIcon}" Width="16" Height="16"/> -->
                            <TextBlock Text="🔧" Width="16" Height="16" TextAlignment="Center"/>
                            <TextBlock Text="一般設定" VerticalAlignment="Center"/>
                        </StackPanel>
                    </ListBoxItem>
                    
                    <!-- 外観設定 -->
                    <ListBoxItem x:Name="AppearanceSettingItem">
                        <StackPanel Orientation="Horizontal" Spacing="10">
                            <!-- <PathIcon Data="{StaticResource ThemeIcon}" Width="16" Height="16"/> -->
                            <TextBlock Text="🎨" Width="16" Height="16" TextAlignment="Center"/>
                            <TextBlock Text="外観設定" VerticalAlignment="Center"/>
                        </StackPanel>
                    </ListBoxItem>
                    
                    <!-- 言語設定 -->
                    <ListBoxItem x:Name="LanguageSettingItem">
                        <StackPanel Orientation="Horizontal" Spacing="10">
                            <!-- <PathIcon Data="{StaticResource LanguageIcon}" Width="16" Height="16"/> -->
                            <TextBlock Text="🌐" Width="16" Height="16" TextAlignment="Center"/>
                            <TextBlock Text="言語設定" VerticalAlignment="Center"/>
                        </StackPanel>
                    </ListBoxItem>
                    
                    <!-- 言語ペア設定 -->
                    <ListBoxItem x:Name="LanguagePairsSettingItem">
                        <StackPanel Orientation="Horizontal" Spacing="10">
                            <!-- <PathIcon Data="{StaticResource SwapIcon}" Width="16" Height="16"/> -->
                            <TextBlock Text="🔄" Width="16" Height="16" TextAlignment="Center"/>
                            <TextBlock Text="言語ペア設定" VerticalAlignment="Center"/>
                        </StackPanel>
                    </ListBoxItem>
                    
                    <!-- 翻訳エンジン設定 -->
                    <ListBoxItem x:Name="TranslationEngineSettingItem">
                        <StackPanel Orientation="Horizontal" Spacing="10">
                            <!-- <PathIcon Data="{StaticResource TranslateIcon}" Width="16" Height="16"/> -->
                            <TextBlock Text="🔤" Width="16" Height="16" TextAlignment="Center"/>
                            <TextBlock Text="翻訳エンジン" VerticalAlignment="Center"/>
                        </StackPanel>
                    </ListBoxItem>
                    
                    <!-- ホットキー設定 -->
                    <ListBoxItem x:Name="HotkeysSettingItem">
                        <StackPanel Orientation="Horizontal" Spacing="10">
                            <!-- <PathIcon Data="{StaticResource KeyboardIcon}" Width="16" Height="16"/> -->
                            <TextBlock Text="⌨️" Width="16" Height="16" TextAlignment="Center"/>
                            <TextBlock Text="ホットキー設定" VerticalAlignment="Center"/>
                        </StackPanel>
                    </ListBoxItem>
                    
                    <!-- 詳細設定 -->
                    <ListBoxItem x:Name="AdvancedSettingItem">
                        <StackPanel Orientation="Horizontal" Spacing="10">
                            <!-- <PathIcon Data="{StaticResource AdvancedIcon}" Width="16" Height="16"/> -->
                            <TextBlock Text="⚙️" Width="16" Height="16" TextAlignment="Center"/>
                            <TextBlock Text="詳細設定" VerticalAlignment="Center"/>
                        </StackPanel>
                    </ListBoxItem>
                </ListBox>
            </Border>
            
            <!-- 設定パネル -->
            <Border Grid.Column="1" Classes="card">
                <ScrollViewer>
                    <!-- 各カテゴリのパネル -->
                    <Panel>
                        <StackPanel IsVisible="True"
                                    Spacing="20" Margin="10">
                            <StackPanel Spacing="5">
                                <TextBlock Text="一般設定" 
                                           Classes="SubtitleTextBlockStyle"  
                                           Margin="0,0,0,10"/>
                                <CheckBox Content="Windows起動時に自動的に起動する" 
                                          IsChecked="{Binding StartWithWindows}"/>
                                <CheckBox Content="最小化時にシステムトレイに格納する" 
                                          IsChecked="{Binding MinimizeToTray}"/>
                            </StackPanel>
                        </StackPanel>
                        
                        <!-- 外観設定 -->
                        <StackPanel IsVisible="False"
                                    Spacing="20" Margin="10">
                            <StackPanel Spacing="5">
                                <TextBlock Text="テーマ設定" 
                                           Classes="SubtitleTextBlockStyle"  
                                           Margin="0,0,0,10"/>
                                <StackPanel Orientation="Horizontal" Spacing="10">
                                    <RadioButton Content="ライトテーマ" 
                                                 IsChecked="{Binding !IsDarkTheme}" 
                                                 GroupName="Theme"/>
                                    <RadioButton Content="ダークテーマ" 
                                                 IsChecked="{Binding IsDarkTheme}" 
                                                 GroupName="Theme"/>
                                </StackPanel>
                            </StackPanel>
                            
                            <StackPanel Spacing="5">
                                <TextBlock Text="UIスケール" 
                                           Classes="SubtitleTextBlockStyle"  
                                           Margin="0,0,0,10"/>
                                <ComboBox ItemsSource="{Binding UIScaleOptions}" 
                                          SelectedItem="{Binding UIScale}" 
                                          HorizontalAlignment="Left" 
                                          Width="100"/>
                                <TextBlock Text="※UIのサイズを調整します。変更後は再起動が必要です。" 
                                           Foreground="{DynamicResource TextSecondaryBrush}" 
                                           FontSize="12" 
                                           Margin="0,5,0,0"/>
                            </StackPanel>
                        </StackPanel>
                        
                        <!-- 言語設定 -->
                        <StackPanel IsVisible="False"
                                    Spacing="20" Margin="10">
                            <StackPanel Spacing="5">
                                <TextBlock Text="UI言語" 
                                           Classes="SubtitleTextBlockStyle"  
                                           Margin="0,0,0,10"/>
                                <ComboBox ItemsSource="{Binding UILanguageOptions}" 
                                          SelectedItem="{Binding UILanguage}" 
                                          HorizontalAlignment="Left" 
                                          Width="200"/>
                            </StackPanel>
                            
                            <StackPanel Spacing="5">
                                <TextBlock Text="OCR言語" 
                                           Classes="SubtitleTextBlockStyle"  
                                           Margin="0,0,0,10"/>
                                <ComboBox ItemsSource="{Binding OCRLanguageOptions}" 
                                          SelectedItem="{Binding OCRLanguage}" 
                                          HorizontalAlignment="Left" 
                                          Width="200"/>
                                <TextBlock Text="※テキスト検出に使用する言語を選択します" 
                                           Foreground="{DynamicResource TextSecondaryBrush}" 
                                           FontSize="12" 
                                           Margin="0,5,0,0"/>
                            </StackPanel>
                            
                            <StackPanel Spacing="5">
                                <TextBlock Text="翻訳先言語" 
                                           Classes="SubtitleTextBlockStyle"  
                                           Margin="0,0,0,10"/>
                                <ComboBox ItemsSource="{Binding TranslationLanguageOptions}" 
                                          SelectedItem="{Binding TranslationLanguage}" 
                                          HorizontalAlignment="Left" 
                                          Width="200"/>
                            </StackPanel>
                        </StackPanel>
                        
                        <!-- 言語ペア設定 -->
                        <StackPanel IsVisible="False"
                                    Spacing="20" Margin="10">
                            <Grid ColumnDefinitions="*,Auto" Margin="0,0,0,10">
                                <TextBlock Grid.Column="0" 
                                           Text="言語ペア設定" 
                                           Classes="SubtitleTextBlockStyle"/>
                                <StackPanel Grid.Column="1" Orientation="Horizontal" Spacing="5">
                                    <Button Content="新規追加" 
                                            Command="{Binding LanguagePairsViewModel.AddLanguagePairCommand}"
                                            Classes="compact primary"/>
                                    <Button Content="デフォルトにリセット" 
                                            Command="{Binding LanguagePairsViewModel.ResetToDefaultsCommand}"
                                            Classes="compact secondary"/>
                                    <Button Content="保存" 
                                            Command="{Binding LanguagePairsViewModel.SaveLanguagePairsCommand}"
                                            Classes="compact primary"/>
                                </StackPanel>
                            </Grid>
                            
                            <!-- 言語ペアリスト -->
                            <Border Classes="card">
                                <Grid RowDefinitions="Auto,*">
                                    <!-- ヘッダー -->
                                    <Border Grid.Row="0" 
                                            Background="{DynamicResource BackgroundDarkBrush}" 
                                            Margin="-16,-16,-16,0" 
                                            Padding="16,8">
                                        <Grid ColumnDefinitions="30,150,150,100,80,80,60,*,40">
                                            <TextBlock Grid.Column="0" Text="" FontWeight="Bold" FontSize="12"/>
                                            <TextBlock Grid.Column="1" Text="ソース言語" FontWeight="Bold" FontSize="12"/>
                                            <TextBlock Grid.Column="2" Text="ターゲット言語" FontWeight="Bold" FontSize="12"/>
                                            <TextBlock Grid.Column="3" Text="エンジン" FontWeight="Bold" FontSize="12"/>
                                            <TextBlock Grid.Column="4" Text="戦略" FontWeight="Bold" FontSize="12"/>
                                            <TextBlock Grid.Column="5" Text="レイテンシ" FontWeight="Bold" FontSize="12"/>
                                            <TextBlock Grid.Column="6" Text="優先度" FontWeight="Bold" FontSize="12"/>
                                            <TextBlock Grid.Column="7" Text="説明" FontWeight="Bold" FontSize="12"/>
                                            <TextBlock Grid.Column="8" Text="操作" FontWeight="Bold" FontSize="12"/>
                                        </Grid>
                                    </Border>
                                    
                                    <!-- コンテンツ -->
                                    <ScrollViewer Grid.Row="1" MaxHeight="400">
                                        <ItemsControl ItemsSource="{Binding LanguagePairsViewModel.LanguagePairs}">
                                            <ItemsControl.ItemTemplate>
                                                <DataTemplate>
                                                    <Border Classes="language-pair-item" 
                                                            Background="{Binding IsEnabled, Converter={StaticResource BoolToBackgroundConverter}}">
                                                        <Grid ColumnDefinitions="30,150,150,100,80,80,60,*,40" Margin="0,8">
                                                            
                                                            <!-- 有効化チェックボックス -->
                                                            <CheckBox Grid.Column="0" 
                                                                      IsChecked="{Binding IsEnabled}" 
                                                                      VerticalAlignment="Center"/>
                                                            
                                                            <!-- ソース言語 -->
                                                            <ComboBox Grid.Column="1" 
                                                                      Margin="0,0,5,0">
                                                                <!-- ItemsSource="{Binding $parent[UserControl].DataContext.LanguagePairsViewModel.AvailableLanguages}"
                                                                      SelectedItem="{Binding SourceLanguage, Converter={StaticResource LanguageCodeToLanguageInfoConverter}}"
                                                                      DisplayMemberBinding="{Binding DisplayName}" -->
                                                            </ComboBox>
                                                            
                                                            <!-- ターゲット言語 -->
                                                            <ComboBox Grid.Column="2" 
                                                                      Margin="0,0,5,0">
                                                                <!-- ItemsSource="{Binding $parent[UserControl].DataContext.LanguagePairsViewModel.AvailableLanguages}"
                                                                      SelectedItem="{Binding TargetLanguage, Converter={StaticResource LanguageCodeToLanguageInfoConverter}}"
                                                                      DisplayMemberBinding="{Binding DisplayName}" -->
                                                            </ComboBox>
                                                            
                                                            <!-- エンジン -->
                                                            <ComboBox Grid.Column="3" 
                                                                      Margin="0,0,5,0">
                                                                <!-- ItemsSource="{Binding $parent[UserControl].DataContext.LanguagePairsViewModel.AvailableEngines}"
                                                                      SelectedItem="{Binding SelectedEngine}" -->
                                                            </ComboBox>
                                                            
                                                            <!-- 翻訳戦略 -->
                                                            <ComboBox Grid.Column="4" 
                                                                      Margin="0,0,5,0">
                                                                <!-- ItemsSource="{Binding $parent[UserControl].DataContext.LanguagePairsViewModel.AvailableStrategies}"
                                                                      SelectedItem="{Binding Strategy}" -->
                                                                <!--<ComboBox.ItemTemplate>
                                                                    <DataTemplate>
                                                                        <TextBlock Text="{Binding Converter={StaticResource TranslationStrategyConverter}}"/>
                                                                    </DataTemplate>
                                                                </ComboBox.ItemTemplate>-->
                                                            </ComboBox>
                                                            
                                                            <!-- レイテンシ -->
                                                            <TextBlock Grid.Column="5" 
                                                                       Text="{Binding LatencyDisplayText}" 
                                                                       VerticalAlignment="Center" 
                                                                       FontSize="11"
                                                                       Margin="5,0"/>
                                                            
                                                            <!-- 優先度 -->
                                                            <NumericUpDown Grid.Column="6" 
                                                                           Value="{Binding Priority}" 
                                                                           Minimum="1" 
                                                                           Maximum="10" 
                                                                           Width="50"
                                                                           Margin="0,0,5,0"/>
                                                            
                                                            <!-- 説明 -->
                                                            <TextBox Grid.Column="7" 
                                                                     Text="{Binding Description}" 
                                                                     FontSize="11"
                                                                     Margin="0,0,5,0"/>
                                                            
                                                            <!-- 操作ボタン -->
                                                            <StackPanel Grid.Column="8" 
                                                                        Orientation="Horizontal" 
                                                                        Spacing="2">
                                                                <Button Content="編集" 
                                                                        Command="{Binding $parent[UserControl].DataContext.LanguagePairsViewModel.EditLanguagePairCommand}"
                                                                        CommandParameter="{Binding}"
                                                                        Classes="mini secondary"
                                                                        FontSize="10"/>
                                                                <Button Content="削除" 
                                                                        Command="{Binding $parent[UserControl].DataContext.LanguagePairsViewModel.RemoveLanguagePairCommand}"
                                                                        CommandParameter="{Binding}"
                                                                        Classes="mini danger"
                                                                        FontSize="10"/>
                                                            </StackPanel>
                                                            
                                                        </Grid>
                                                    </Border>
                                                </DataTemplate>
                                            </ItemsControl.ItemTemplate>
                                        </ItemsControl>
                                    </ScrollViewer>
                                </Grid>
                            </Border>
                            
                                            <!-- 中国語変種設定 (選択された言語ペアが中国語関連の場合のみ表示) -->
                            <Border Classes="info-border" 
                                    IsVisible="{Binding LanguagePairsViewModel.SelectedLanguagePair.IsChineseRelated}">
                                <StackPanel>
                                    <TextBlock Text="中国語変種設定" FontWeight="Bold" Margin="0,0,0,10"/>
                                    <ComboBox Width="200" HorizontalAlignment="Left">
                                        <!-- ItemsSource="{Binding LanguagePairsViewModel.AvailableChineseVariants}"
                                              SelectedItem="{Binding LanguagePairsViewModel.SelectedLanguagePair.ChineseVariant}" -->
                                        <!--<ComboBox.ItemTemplate>
                                            <DataTemplate>
                                                <TextBlock Text="{Binding Converter={StaticResource ChineseVariantConverter}}"/>
                                            </DataTemplate>
                                        </ComboBox.ItemTemplate>-->
                                    </ComboBox>
                                    <TextBlock Text="中国語関連の翻訳で使用する文字体系を選択してください。" 
                                               Foreground="{DynamicResource TextSecondaryBrush}" 
                                               FontSize="12" 
                                               Margin="0,5,0,0"/>
                                </StackPanel>
                            </Border>
                            
                            <!-- 言語ペア統計 -->
                            <Border Classes="status-panel">
                                <Grid ColumnDefinitions="*,*,*" RowDefinitions="Auto,Auto">
                                    <StackPanel Grid.Column="0" Grid.Row="0">
                                        <TextBlock Text="総言語ペア数" FontWeight="Bold" FontSize="12"/>
                                        <TextBlock Text="{Binding LanguagePairsViewModel.LanguagePairs.Count}" 
                                                   FontSize="18" 
                                                   FontWeight="Bold" 
                                                   Foreground="{DynamicResource PrimaryBrush}"/>
                                    </StackPanel>
                                    
                                    <StackPanel Grid.Column="1" Grid.Row="0">
                                        <TextBlock Text="有効ペア数" FontWeight="Bold" FontSize="12"/>
                                        <TextBlock Text="0" FontSize="18" FontWeight="Bold" Foreground="{DynamicResource SuccessBrush}">
                                            <!-- <TextBlock.Text>
                                                <MultiBinding StringFormat="{}{0}">
                                                    <Binding Path="LanguagePairsViewModel.LanguagePairs" 
                                                             Converter="{StaticResource CollectionCountConverter}" 
                                                             ConverterParameter="IsEnabled=True"/>
                                                </MultiBinding>
                                            </TextBlock.Text> -->
                                        </TextBlock>
                                    </StackPanel>
                                    
                                    <StackPanel Grid.Column="2" Grid.Row="0">
                                        <TextBlock Text="平均レイテンシ" FontWeight="Bold" FontSize="12"/>
                                        <TextBlock Text="50ms" FontSize="18" FontWeight="Bold" Foreground="{DynamicResource InfoBrush}">
                                            <!-- <TextBlock.Text>
                                                <MultiBinding StringFormat="{}{0:F0}ms">
                                                    <Binding Path="LanguagePairsViewModel.LanguagePairs" 
                                                             Converter="{StaticResource CollectionAverageConverter}" 
                                                             ConverterParameter="EstimatedLatencyMs"/>
                                                </MultiBinding>
                                            </TextBlock.Text> -->
                                        </TextBlock>
                                    </StackPanel>
                                </Grid>
                            </Border>
                        </StackPanel>
                        
                        <!-- 翻訳エンジン設定 -->
                        <StackPanel IsVisible="False"
                                    Spacing="20" Margin="10">
                            <TextBlock Text="翻訳エンジン選択" 
                                       Classes="SubtitleTextBlockStyle"  
                                       Margin="0,0,0,10"/>
                            
                            <!-- エンジン選択ラジオボタン -->
                            <StackPanel Spacing="15">
                                
                                <RadioButton GroupName="TranslationEngine" 
                                             IsChecked="{Binding IsLocalOnlySelected}"
                                             Classes="engine-radio">
                                    <StackPanel>
                                        <TextBlock Text="LocalOnly（ローカル翻訳）" FontWeight="Bold"/>
                                        <TextBlock Text="• OPUS-MT専用" Classes="description"/>
                                        <TextBlock Text="• 高速・無料・オフライン対応" Classes="description"/>
                                        <TextBlock Text="• 適用: 短いテキスト、一般的翻訳" Classes="description"/>
                                        <TextBlock Text="平均レイテンシ: &lt; 50ms" Classes="performance"/>
                                        <!-- リアルタイム状態表示 -->
                                        <TextBlock Text="{Binding LocalEngineStatusText}" 
                                                   Classes="engine-status" 
                                                   Margin="0,5,0,0"/>
                                    </StackPanel>
                                </RadioButton>
                                
                                <RadioButton GroupName="TranslationEngine" 
                                             IsChecked="{Binding IsCloudOnlySelected}"
                                             Classes="engine-radio">
                                    <StackPanel>
                                        <TextBlock Text="CloudOnly（クラウド翻訳）" FontWeight="Bold"/>
                                        <TextBlock Text="• Gemini API専用" Classes="description"/>
                                        <TextBlock Text="• 高品質・有料・ネットワーク必須" Classes="description"/>
                                        <TextBlock Text="• 適用: 複雑なテキスト、専門用語" Classes="description"/>
                                        <TextBlock Text="平均レイテンシ: &lt; 2000ms" Classes="performance"/>
                                        <!-- リアルタイム状態表示 -->
                                        <TextBlock Text="{Binding CloudEngineStatusText}" 
                                                   Classes="engine-status" 
                                                   Margin="0,5,0,0"/>
                                    </StackPanel>
                                </RadioButton>
                                
                            </StackPanel>
                            
                            <!-- リアルタイム状態モニタリングパネル -->
                            <Border Classes="status-panel" Margin="0,15,0,0">
                                <StackPanel>
                                    <Grid ColumnDefinitions="*,Auto" Margin="0,0,0,10">
                                        <TextBlock Grid.Column="0" Text="リアルタイム状態モニタリング" FontWeight="Bold"/>
                                        <StackPanel Grid.Column="1" Orientation="Horizontal" Spacing="5">
                                            <Button Content="更新" 
                                                    Command="{Binding RefreshStatusCommand}" 
                                                    Classes="compact secondary"/>
                                            <ToggleButton Content="監視" 
                                                          IsChecked="{Binding IsStatusMonitoringEnabled}"
                                                          Classes="compact primary"/>
                                        </StackPanel>
                                    </Grid>
                                    
                                    <!-- 状態情報グリッド -->
                                    <Grid ColumnDefinitions="*,*,*" RowDefinitions="Auto,Auto" Margin="0,5">
                                        
                                        <!-- LocalOnlyエンジン状態 -->
                                        <Border Grid.Column="0" Grid.Row="0" Classes="status-item" Margin="0,0,5,5">
                                            <StackPanel>
                                                <TextBlock Text="LocalOnly" FontWeight="Bold" FontSize="12"/>
                                                <TextBlock Text="{Binding LocalEngineStatusText}" 
                                                           Classes="status-text" 
                                                           FontSize="11"/>
                                            </StackPanel>
                                        </Border>
                                        
                                        <!-- CloudOnlyエンジン状態 -->
                                        <Border Grid.Column="1" Grid.Row="0" Classes="status-item" Margin="5,0,5,5">
                                            <StackPanel>
                                                <TextBlock Text="CloudOnly" FontWeight="Bold" FontSize="12"/>
                                                <TextBlock Text="{Binding CloudEngineStatusText}" 
                                                           Classes="status-text" 
                                                           FontSize="11"/>
                                            </StackPanel>
                                        </Border>
                                        
                                        <!-- ネットワーク状態 -->
                                        <Border Grid.Column="2" Grid.Row="0" Classes="status-item" Margin="5,0,0,5">
                                            <StackPanel>
                                                <TextBlock Text="ネットワーク" FontWeight="Bold" FontSize="12"/>
                                                <TextBlock Text="{Binding NetworkStatusText}" 
                                                           Classes="status-text" 
                                                           FontSize="11"/>
                                            </StackPanel>
                                        </Border>
                                        
                                        <!-- フォールバック情報 -->
                                        <Border Grid.Column="0" Grid.ColumnSpan="3" Grid.Row="1" Classes="status-item" Margin="0,5,0,0">
                                            <StackPanel>
                                                <TextBlock Text="最後のフォールバック" FontWeight="Bold" FontSize="12"/>
                                                <TextBlock Text="{Binding LastFallbackText}" 
                                                           Classes="status-text" 
                                                           FontSize="11"/>
                                            </StackPanel>
                                        </Border>
                                        
                                    </Grid>
                                </StackPanel>
                            </Border>
                            
                            <!-- 選択されたエンジンの詳細情報 -->
                            <Border Classes="info-border">
                                <StackPanel>
                                    <TextBlock Text="選択中のエンジン詳細" FontWeight="Bold"/>
                                    <TextBlock Text="{Binding SelectedEngineDescription}" TextWrapping="Wrap" Margin="0,5,0,0"/>
                                    <TextBlock Text="{Binding EstimatedCostInfo}" Classes="cost-info" Margin="0,5,0,0"/>
                                </StackPanel>
                            </Border>
                            
                            <!-- フォールバック設定 -->
                            <StackPanel Spacing="10">
                                <TextBlock Text="自動フォールバック設定" FontWeight="Bold"/>
                                <TextBlock Text="CloudOnly選択時に以下の状況でLocalOnlyに自動切り替え" 
                                           Classes="description"/>
                                
                                <CheckBox IsChecked="{Binding EnableRateLimitFallback}"
                                          Content="レート制限時の自動フォールバック"/>
                                
                                <CheckBox IsChecked="{Binding EnableNetworkErrorFallback}"
                                          Content="ネットワークエラー時の自動フォールバック"/>
                                
                                <CheckBox IsChecked="{Binding EnableApiErrorFallback}"
                                          Content="APIエラー時の自動フォールバック"/>
                                
                                <CheckBox IsChecked="{Binding ShowFallbackNotifications}"
                                          Content="フォールバック発生時の通知表示"/>
                                
                                <!-- フォールバック詳細設定 -->
                                <Expander Header="詳細設定" IsExpanded="False" Margin="0,10,0,0">
                                    <StackPanel Spacing="5">
                                        
                                        <StackPanel Orientation="Horizontal" Spacing="10">
                                            <TextBlock Text="フォールバック判定タイムアウト:"/>
                                            <NumericUpDown Value="{Binding FallbackTimeoutSeconds}" 
                                                           Minimum="5" Maximum="60" Increment="5" Width="60"/>
                                            <TextBlock Text="秒"/>
                                        </StackPanel>
                                        
                                        <StackPanel Orientation="Horizontal" Spacing="10">
                                            <TextBlock Text="自動復旧チェック間隔:"/>
                                            <NumericUpDown Value="{Binding RecoveryCheckIntervalMinutes}" 
                                                           Minimum="1" Maximum="30" Increment="1" Width="60"/>
                                            <TextBlock Text="分"/>
                                        </StackPanel>
                                        
                                    </StackPanel>
                                </Expander>
                            </StackPanel>
                        </StackPanel>
                        
                        <!-- ホットキー設定 -->
                        <StackPanel IsVisible="False"
                                    Spacing="20" Margin="10">
                            <TextBlock Text="ホットキー設定" 
                                       Classes="SubtitleTextBlockStyle"  
                                       Margin="0,0,0,10"/>
                                       
                            <Grid ColumnDefinitions="200,*" RowDefinitions="Auto,Auto,Auto" Margin="0,5">
                                <TextBlock Grid.Row="0" Grid.Column="0" 
                                           Text="キャプチャ開始/停止:" 
                                           VerticalAlignment="Center" 
                                           Margin="0,0,20,10"/>
                                <TextBox Grid.Row="0" Grid.Column="1" 
                                         Text="{Binding CaptureHotkey}" 
                                         Watermark="例: Ctrl+Alt+C"
                                         Margin="0,0,0,10" 
                                         Width="200" 
                                         HorizontalAlignment="Left"/>
                                         
                                <TextBlock Grid.Row="1" Grid.Column="0" 
                                           Text="手動翻訳:" 
                                           VerticalAlignment="Center" 
                                           Margin="0,0,20,10"/>
                                <TextBox Grid.Row="1" Grid.Column="1" 
                                         Text="{Binding TranslateHotkey}" 
                                         Watermark="例: Ctrl+Alt+T"
                                         Margin="0,0,0,10" 
                                         Width="200" 
                                         HorizontalAlignment="Left"/>
                                         
                                <TextBlock Grid.Row="2" Grid.Column="0" 
                                           Text="リセット:" 
                                           VerticalAlignment="Center" 
                                           Margin="0,0,20,10"/>
                                <TextBox Grid.Row="2" Grid.Column="1" 
                                         Text="{Binding ResetHotkey}" 
                                         Watermark="例: Ctrl+Alt+R"
                                         Width="200" 
                                         HorizontalAlignment="Left"/>
                            </Grid>
                            
                            <TextBlock Text="※変更を反映するには、設定を保存後にアプリケーションを再起動してください" 
                                       Foreground="{DynamicResource TextSecondaryBrush}" 
                                       FontSize="12" 
                                       Margin="0,10,0,0"/>
                        </StackPanel>
                        
                        <!-- 詳細設定 -->
                        <StackPanel IsVisible="False"
                                    Spacing="20" Margin="10">
                            <TextBlock Text="詳細設定" 
                                       Classes="SubtitleTextBlockStyle"  
                                       Margin="0,0,0,10"/>
                                       
                            <CheckBox Content="デバッグログを有効にする" 
                                      IsChecked="{Binding EnableDebugLogs}"/>
                                      
                            <StackPanel Spacing="5" Margin="0,10,0,0">
                                <Button Content="設定をデフォルトにリセット" 
                                        Command="{Binding ResetToDefaultsCommand}" 
                                        Classes="danger" 
                                        HorizontalAlignment="Left"/>
                                <TextBlock Text="※すべての設定をデフォルト値に戻します" 
                                           Foreground="{DynamicResource TextSecondaryBrush}" 
                                           FontSize="12" 
                                           Margin="0,5,0,0"/>
                            </StackPanel>
                        </StackPanel>
                    </Panel>
                </ScrollViewer>
            </Border>
        </Grid>
        
        <!-- フッター（ボタン） -->
        <Grid Grid.Row="2" ColumnDefinitions="Auto,*,Auto" Margin="0,20,0,0">
            <ProgressBar Grid.Column="0" 
                         IsIndeterminate="True" 
                         IsVisible="{Binding IsLoading}" 
                         Width="100" 
                         Height="4" 
                         Margin="0,0,10,0" 
                         VerticalAlignment="Center"/>
                         
            <TextBlock Grid.Column="1" 
                       Text="{Binding ErrorMessage}" 
                       Foreground="Red" 
                       VerticalAlignment="Center" 
                       IsVisible="{Binding !!ErrorMessage}"/>
                       
            <StackPanel Grid.Column="2" 
                        Orientation="Horizontal" 
                        HorizontalAlignment="Right" 
                        Spacing="10">
                <Button Content="キャンセル" 
                        Command="{Binding CancelCommand}" 
                        Classes="secondary" 
                        IsEnabled="{Binding HasChanges}"/>
                <Button Content="保存" 
                        Command="{Binding SaveCommand}" 
                        Classes="primary" 
                        IsEnabled="{Binding HasChanges}"/>
            </StackPanel>
        </Grid>
    </Grid>
</UserControl>