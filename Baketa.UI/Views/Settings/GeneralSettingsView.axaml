<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:vm="using:Baketa.UI.ViewModels.Settings"
             xmlns:controls="using:Baketa.UI.Controls"
             xmlns:converters="using:Baketa.UI.Converters"
             x:Class="Baketa.UI.Views.Settings.GeneralSettingsView"
             x:DataType="vm:GeneralSettingsViewModel">

    <Design.PreviewWith>
        <Border Padding="20" Width="600" Height="800">
            <!-- デザインタイム用のダミーデータ -->
        </Border>
    </Design.PreviewWith>

    <ScrollViewer>
        <StackPanel Margin="20" Spacing="20">
            <!-- ヘッダー -->
            <StackPanel Spacing="8">
                <TextBlock Text="一般設定" FontSize="20" FontWeight="SemiBold"/>
                <TextBlock Text="アプリケーションの基本的な動作設定"
                           Foreground="{DynamicResource TextFillColorSecondaryBrush}"/>
            </StackPanel>

            <!-- 外観設定 -->
            <StackPanel Spacing="12">
                <TextBlock Text="外観" FontSize="16" FontWeight="SemiBold"/>

                <controls:SettingsItem Title="テーマ"
                                        Description="アプリケーションの配色テーマを選択します">
                    <controls:SettingsItem.SettingContent>
                        <ComboBox ItemsSource="{Binding AvailableThemes}"
                                  SelectedItem="{Binding SelectedTheme}"
                                  Width="200">
                            <ComboBox.ItemTemplate>
                                <DataTemplate>
                                    <TextBlock Text="{Binding Converter={x:Static converters:SettingsConverters.ThemeToDisplayName}}"/>
                                </DataTemplate>
                            </ComboBox.ItemTemplate>
                        </ComboBox>
                    </controls:SettingsItem.SettingContent>
                </controls:SettingsItem>
            </StackPanel>

            <!-- 翻訳設定 -->
            <StackPanel Spacing="12">
                <TextBlock Text="翻訳設定" FontSize="16" FontWeight="SemiBold"/>

                <controls:SettingsItem Title="翻訳エンジン"
                                        Description="使用する翻訳エンジンを選択します">
                    <controls:SettingsItem.SettingContent>
                        <StackPanel Spacing="8">
                            <RadioButton Content="オフライン翻訳"
                                         IsChecked="{Binding UseLocalEngine}"
                                         GroupName="TranslationEngine"/>
                            <RadioButton Content="AI翻訳"
                                         IsChecked="{Binding !UseLocalEngine}"
                                         IsEnabled="{Binding IsCloudTranslationEnabled}"
                                         GroupName="TranslationEngine"/>
                            <TextBlock Text="※ αテストではオフライン翻訳のみ利用可能"
                                       FontSize="11"
                                       Foreground="{DynamicResource TextFillColorTertiaryBrush}"
                                       Margin="0,4,0,0"/>
                        </StackPanel>
                    </controls:SettingsItem.SettingContent>
                </controls:SettingsItem>

                <controls:SettingsItem Title="翻訳言語"
                                        Description="翻訳元と翻訳先の言語を選択します">
                    <controls:SettingsItem.SettingContent>
                        <StackPanel Orientation="Horizontal" Spacing="12">
                            <ComboBox ItemsSource="{Binding AvailableLanguages}"
                                      SelectedItem="{Binding SourceLanguage}"
                                      Width="120"/>
                            <TextBlock Text="→"
                                       VerticalAlignment="Center"
                                       FontWeight="Bold"
                                       Foreground="{DynamicResource AccentFillColorDefaultBrush}"/>
                            <ComboBox ItemsSource="{Binding AvailableTargetLanguages}"
                                      SelectedItem="{Binding TargetLanguage}"
                                      Width="120"/>
                        </StackPanel>
                    </controls:SettingsItem.SettingContent>
                </controls:SettingsItem>

                <controls:SettingsItem Title="翻訳文字サイズ"
                                        Description="オーバーレイに表示される翻訳テキストのサイズ">
                    <controls:SettingsItem.SettingContent>
                        <StackPanel Orientation="Horizontal" Spacing="8">
                            <ComboBox ItemsSource="{Binding FontSizeOptions}"
                                      SelectedItem="{Binding FontSize}"
                                      Width="80"/>
                            <TextBlock Text="px" VerticalAlignment="Center"/>
                        </StackPanel>
                    </controls:SettingsItem.SettingContent>
                </controls:SettingsItem>

                <TextBlock Text="※ 翻訳元と翻訳先は異なる言語を選択してください"
                           FontSize="11"
                           Foreground="#D83B01"
                           IsVisible="{Binding !IsLanguagePairValid}"/>
            </StackPanel>
        </StackPanel>
    </ScrollViewer>
</UserControl>
