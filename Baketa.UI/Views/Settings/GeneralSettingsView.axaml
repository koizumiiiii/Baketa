<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:vm="using:Baketa.UI.ViewModels.Settings"
             xmlns:controls="using:Baketa.UI.Controls"
             xmlns:converters="using:Baketa.UI.Converters"
             xmlns:local="using:Baketa.UI.Extensions"
             x:Class="Baketa.UI.Views.Settings.GeneralSettingsView"
             x:DataType="vm:GeneralSettingsViewModel">

    <Design.PreviewWith>
        <Border Padding="20" Width="600" Height="800">
            <!-- デザインタイム用のダミーデータ -->
        </Border>
    </Design.PreviewWith>

        <StackPanel Margin="20,20,20,40" Spacing="20">
            <!-- ヘッダー -->
            <StackPanel Spacing="8">
                <TextBlock Text="{local:Localize Settings_General_Title}" FontSize="20" FontWeight="Medium"/>
                <TextBlock Text="{local:Localize Settings_General_Subtitle}"
                           Foreground="{DynamicResource TextFillColorSecondaryBrush}"/>
            </StackPanel>

            <!-- 翻訳設定 -->
            <StackPanel Spacing="12">
                <TextBlock Text="{local:Localize Settings_General_Translation}" FontSize="16" FontWeight="Medium"/>

                <controls:SettingsItem Title="{local:Localize Settings_General_TranslationEngine}"
                                        Description="{local:Localize Settings_General_TranslationEngineDescription}">
                    <controls:SettingsItem.SettingContent>
                        <StackPanel Spacing="8">
                            <RadioButton Content="{local:Localize Settings_General_OfflineTranslation}"
                                         IsChecked="{Binding UseLocalEngine}"
                                         GroupName="TranslationEngine"/>
                            <RadioButton Content="{local:Localize Settings_General_AITranslation}"
                                         IsChecked="{Binding !UseLocalEngine}"
                                         IsEnabled="{Binding IsCloudTranslationEnabled}"
                                         GroupName="TranslationEngine"/>
                            <TextBlock Text="{Binding CloudTranslationNote}"
                                       FontSize="11"
                                       Foreground="{DynamicResource TextFillColorTertiaryBrush}"
                                       Margin="0,4,0,0"
                                       IsVisible="{Binding CloudTranslationNote, Converter={x:Static StringConverters.IsNotNullOrEmpty}}"/>

                            <!-- [Issue #78 Phase 5] Cloud AI使用量表示 -->
                            <Border IsVisible="{Binding ShowCloudUsageInfo}"
                                    Background="{DynamicResource CardBackgroundFillColorDefaultBrush}"
                                    CornerRadius="4"
                                    Padding="12,8"
                                    Margin="0,8,0,0">
                                <StackPanel Spacing="6">
                                    <StackPanel Orientation="Horizontal" Spacing="8">
                                        <TextBlock Text="{local:Localize Settings_General_CloudUsageLabel}"
                                                   FontSize="12"
                                                   Foreground="{DynamicResource TextFillColorSecondaryBrush}"/>
                                        <TextBlock Text="{Binding CloudUsageDisplay}"
                                                   FontSize="12"
                                                   FontWeight="Medium"/>
                                        <TextBlock Text="{local:Localize Settings_General_CloudUsageTokens}"
                                                   FontSize="12"
                                                   Foreground="{DynamicResource TextFillColorSecondaryBrush}"/>
                                    </StackPanel>
                                    <ProgressBar Value="{Binding CloudUsagePercentage}"
                                                 Maximum="100"
                                                 Height="6"
                                                 CornerRadius="3"
                                                 Foreground="{Binding CloudUsageGaugeBrush}"/>
                                </StackPanel>
                            </Border>
                        </StackPanel>
                    </controls:SettingsItem.SettingContent>
                </controls:SettingsItem>

                <controls:SettingsItem Title="{local:Localize Settings_General_TranslationLanguage}"
                                        Description="{local:Localize Settings_General_TranslationLanguageDescription}">
                    <controls:SettingsItem.SettingContent>
                        <StackPanel Orientation="Horizontal" Spacing="12">
                            <ComboBox ItemsSource="{Binding AvailableLanguages}"
                                      SelectedItem="{Binding SourceLanguage}"
                                      Width="120"/>
                            <TextBlock Text="→"
                                       VerticalAlignment="Center"
                                       FontWeight="Bold"
                                       Foreground="{DynamicResource AccentFillColorDefaultBrush}"/>
                            <ComboBox ItemsSource="{Binding AvailableTargetLanguages}"
                                      SelectedItem="{Binding TargetLanguage}"
                                      Width="120"/>
                        </StackPanel>
                    </controls:SettingsItem.SettingContent>
                </controls:SettingsItem>

                <controls:SettingsItem Title="{local:Localize Settings_General_FontSize}"
                                        Description="{local:Localize Settings_General_FontSizeDescription}">
                    <controls:SettingsItem.SettingContent>
                        <StackPanel Orientation="Horizontal" Spacing="8">
                            <ComboBox ItemsSource="{Binding FontSizeOptions}"
                                      SelectedItem="{Binding FontSize}"
                                      Width="80"/>
                            <TextBlock Text="{local:Localize Settings_General_FontSizeUnit}" VerticalAlignment="Center"/>
                        </StackPanel>
                    </controls:SettingsItem.SettingContent>
                </controls:SettingsItem>

                <TextBlock Text="{local:Localize Settings_General_LanguagePairWarning}"
                           FontSize="11"
                           Foreground="#D83B01"
                           IsVisible="{Binding !IsLanguagePairValid}"/>
            </StackPanel>

            <!-- 外観設定 -->
            <StackPanel Spacing="12">
                <TextBlock Text="{local:Localize Settings_General_Appearance}" FontSize="16" FontWeight="Medium"/>

                <controls:SettingsItem Title="{local:Localize Settings_General_Theme}"
                                        Description="{local:Localize Settings_General_ThemeDescription}">
                    <controls:SettingsItem.SettingContent>
                        <ComboBox ItemsSource="{Binding AvailableThemes}"
                                  SelectedItem="{Binding SelectedTheme}"
                                  Width="200">
                            <ComboBox.ItemTemplate>
                                <DataTemplate>
                                    <TextBlock Text="{Binding Converter={x:Static converters:SettingsConverters.ThemeToDisplayName}}"/>
                                </DataTemplate>
                            </ComboBox.ItemTemplate>
                        </ComboBox>
                    </controls:SettingsItem.SettingContent>
                </controls:SettingsItem>

                <controls:SettingsItem Title="{local:Localize Settings_General_Language}"
                                        Description="{local:Localize Settings_General_LanguageDescription}">
                    <controls:SettingsItem.SettingContent>
                        <ComboBox ItemsSource="{Binding AvailableUiLanguages}"
                                  SelectedItem="{Binding SelectedUiLanguage}"
                                  Width="200">
                            <ComboBox.ItemTemplate>
                                <DataTemplate>
                                    <TextBlock Text="{Binding NativeName}"/>
                                </DataTemplate>
                            </ComboBox.ItemTemplate>
                        </ComboBox>
                    </controls:SettingsItem.SettingContent>
                </controls:SettingsItem>
            </StackPanel>
        </StackPanel>
</UserControl>
