<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:vm="using:Baketa.UI.ViewModels.Settings"
             xmlns:controls="using:Baketa.UI.Controls"
             xmlns:local="using:Baketa.UI.Extensions"
             x:Class="Baketa.UI.Views.Settings.AccountSettingsView"
             x:DataType="vm:AccountSettingsViewModel">

    <Design.PreviewWith>
        <Border Padding="20" Width="600" Height="800">
            <!-- Design time preview -->
        </Border>
    </Design.PreviewWith>

    <ScrollViewer>
        <StackPanel Margin="20" Spacing="20">
            <!-- Header -->
            <StackPanel Spacing="8">
                <TextBlock Text="{local:Localize Settings_Account_Title}" FontSize="20" FontWeight="SemiBold"/>
                <TextBlock Text="{local:Localize Settings_Account_Subtitle}"
                           Foreground="{DynamicResource TextFillColorSecondaryBrush}"/>
            </StackPanel>

            <!-- Loading Indicator -->
            <Border IsVisible="{Binding IsLoading}"
                    Background="{DynamicResource CardBackgroundFillColorDefaultBrush}"
                    CornerRadius="8"
                    Padding="16">
                <StackPanel Spacing="8" HorizontalAlignment="Center">
                    <ProgressBar IsIndeterminate="True" Width="200"/>
                    <TextBlock Text="{local:Localize Settings_Account_Processing}" HorizontalAlignment="Center"/>
                </StackPanel>
            </Border>

            <!-- Status Message -->
            <Border IsVisible="{Binding StatusMessage, Converter={x:Static StringConverters.IsNotNullOrEmpty}}"
                    Padding="12,8"
                    CornerRadius="6"
                    Background="{DynamicResource CardBackgroundFillColorDefaultBrush}">
                <TextBlock Text="{Binding StatusMessage}"
                           TextWrapping="Wrap"/>
            </Border>

            <!-- Logged In State -->
            <StackPanel IsVisible="{Binding IsLoggedIn}" Spacing="16">
                <!-- User Info Card -->
                <Border Background="{DynamicResource CardBackgroundFillColorDefaultBrush}"
                        CornerRadius="8"
                        Padding="16">
                    <Grid ColumnDefinitions="*,Auto">
                        <!-- User Details -->
                        <StackPanel Grid.Column="0" VerticalAlignment="Center" Spacing="4">
                            <TextBlock Text="{Binding UserDisplayName}"
                                       FontSize="16"
                                       FontWeight="SemiBold"/>
                            <TextBlock Text="{Binding UserEmail}"
                                       FontSize="12"
                                       Foreground="{DynamicResource TextFillColorSecondaryBrush}"/>
                            <StackPanel Orientation="Horizontal" Spacing="8" IsVisible="{Binding AuthProvider, Converter={x:Static StringConverters.IsNotNullOrEmpty}}">
                                <PathIcon Data="M12,17A2,2 0 0,0 14,15C14,13.89 13.1,13 12,13A2,2 0 0,0 10,15A2,2 0 0,0 12,17M18,8A2,2 0 0,1 20,10V20A2,2 0 0,1 18,22H6A2,2 0 0,1 4,20V10C4,8.89 4.9,8 6,8H7V6A5,5 0 0,1 12,1A5,5 0 0,1 17,6V8H18M12,3A3,3 0 0,0 9,6V8H15V6A3,3 0 0,0 12,3Z"
                                          Width="12" Height="12"
                                          Foreground="{DynamicResource TextFillColorSecondaryBrush}"/>
                                <TextBlock Text="{Binding AuthProviderDisplay}"
                                           FontSize="11"
                                           Foreground="{DynamicResource TextFillColorSecondaryBrush}"/>
                            </StackPanel>
                        </StackPanel>

                        <!-- Status Badge -->
                        <Border Grid.Column="1"
                                Background="{DynamicResource SystemFillColorSuccessBackgroundBrush}"
                                CornerRadius="4"
                                Padding="8,4"
                                VerticalAlignment="Top">
                            <TextBlock Text="{local:Localize Settings_Account_LoggedInStatus}"
                                       FontSize="11"
                                       Foreground="{DynamicResource SystemFillColorSuccessBrush}"/>
                        </Border>
                    </Grid>
                </Border>

                <!-- Account Actions Section -->
                <StackPanel Spacing="12">
                    <TextBlock Text="{local:Localize Settings_Account_Actions}" FontSize="16" FontWeight="SemiBold"/>

                    <controls:SettingsItem Title="{local:Localize Settings_Account_Logout}"
                                           Description="{local:Localize Settings_Account_LogoutDescription}">
                        <controls:SettingsItem.SettingContent>
                            <Button Content="{local:Localize Settings_Account_Logout}"
                                    Command="{Binding LogoutCommand}"
                                    Classes="danger"
                                    Width="100"/>
                        </controls:SettingsItem.SettingContent>
                    </controls:SettingsItem>
                </StackPanel>
            </StackPanel>

            <!-- Patreon連携セクション -->
            <StackPanel Spacing="16">
                <TextBlock Text="{local:Localize Settings_Account_PatreonSection}" FontSize="16" FontWeight="SemiBold" Margin="0,8,0,0"/>

                <!-- Patreon連携済み -->
                <Border IsVisible="{Binding IsPatreonConnected}"
                        Background="{DynamicResource CardBackgroundFillColorDefaultBrush}"
                        CornerRadius="8"
                        Padding="16">
                    <Grid RowDefinitions="Auto,Auto,Auto" ColumnDefinitions="*,Auto">
                        <!-- ユーザー情報 -->
                        <StackPanel Grid.Row="0" Grid.Column="0" Spacing="4">
                            <StackPanel Orientation="Horizontal" Spacing="8">
                                <!-- Patreonアイコン -->
                                <PathIcon Data="M14.82 2.41C18.78 4.57 20.91 9.01 19.32 13.11C17.73 17.22 13.29 19.35 9.33 17.19C5.37 15.03 3.24 10.59 4.83 6.48C6.42 2.38 10.86 0.25 14.82 2.41"
                                          Width="20" Height="20"
                                          Foreground="#FF424242"/>
                                <TextBlock Text="{Binding PatreonUserName}"
                                           FontSize="14"
                                           FontWeight="SemiBold"/>
                            </StackPanel>
                            <StackPanel Orientation="Horizontal" Spacing="8">
                                <TextBlock Text="{local:Localize Settings_Account_PatreonPlanLabel}"
                                           FontSize="12"
                                           Foreground="{DynamicResource TextFillColorSecondaryBrush}"/>
                                <TextBlock Text="{Binding CurrentPlanDisplay}"
                                           FontSize="12"
                                           FontWeight="SemiBold"/>
                            </StackPanel>
                            <StackPanel Orientation="Horizontal" Spacing="4">
                                <TextBlock Text="{local:Localize Settings_License_LastSync}"
                                           FontSize="11"
                                           Foreground="{DynamicResource TextFillColorSecondaryBrush}"/>
                                <TextBlock Text=":"
                                           FontSize="11"
                                           Foreground="{DynamicResource TextFillColorSecondaryBrush}"/>
                                <TextBlock Text="{Binding PatreonLastSyncTimeDisplay}"
                                           FontSize="11"
                                           Foreground="{DynamicResource TextFillColorSecondaryBrush}"/>
                            </StackPanel>
                        </StackPanel>

                        <!-- ステータスバッジ -->
                        <Border Grid.Row="0" Grid.Column="1"
                                Background="{DynamicResource SystemFillColorSuccessBackgroundBrush}"
                                CornerRadius="4"
                                Padding="8,4"
                                VerticalAlignment="Top">
                            <TextBlock Text="{Binding PatreonSyncStatusDisplay}"
                                       FontSize="11"
                                       Foreground="{DynamicResource SystemFillColorSuccessBrush}"/>
                        </Border>

                        <!-- アクションボタン -->
                        <StackPanel Grid.Row="2" Grid.ColumnSpan="2" Orientation="Horizontal" Spacing="8" Margin="0,12,0,0">
                            <Button Content="{local:Localize Settings_Account_PatreonSyncNow}"
                                    Command="{Binding SyncPatreonCommand}"
                                    IsEnabled="{Binding !IsPatreonSyncing}"
                                    Width="100"/>
                            <Button Content="{local:Localize Settings_Account_PatreonDisconnect}"
                                    Command="{Binding DisconnectPatreonCommand}"
                                    IsEnabled="{Binding !IsPatreonSyncing}"
                                    Classes="danger"
                                    Width="100"/>
                        </StackPanel>
                    </Grid>
                </Border>

                <!-- Patreon未連携 -->
                <Border IsVisible="{Binding !IsPatreonConnected}"
                        Background="{DynamicResource CardBackgroundFillColorDefaultBrush}"
                        CornerRadius="8"
                        Padding="20">
                    <StackPanel Spacing="16">
                        <StackPanel Spacing="8" HorizontalAlignment="Center">
                            <!-- Patreonアイコン -->
                            <PathIcon Data="M14.82 2.41C18.78 4.57 20.91 9.01 19.32 13.11C17.73 17.22 13.29 19.35 9.33 17.19C5.37 15.03 3.24 10.59 4.83 6.48C6.42 2.38 10.86 0.25 14.82 2.41"
                                      Width="48" Height="48"
                                      Foreground="#FF424242"/>
                            <TextBlock Text="{local:Localize Settings_Account_PatreonConnectTitle}"
                                       FontSize="16"
                                       FontWeight="SemiBold"
                                       HorizontalAlignment="Center"/>
                            <TextBlock Text="{local:Localize Settings_Account_PatreonConnectDescription}"
                                       FontSize="12"
                                       Foreground="{DynamicResource TextFillColorSecondaryBrush}"
                                       TextWrapping="Wrap"
                                       TextAlignment="Center"
                                       MaxWidth="300"/>
                        </StackPanel>

                        <Button Content="{local:Localize Settings_Account_PatreonConnectButton}"
                                Command="{Binding ConnectPatreonCommand}"
                                HorizontalAlignment="Stretch"
                                HorizontalContentAlignment="Center"
                                Classes="accent"
                                Padding="16,12"/>

                        <!-- プラン説明 -->
                        <StackPanel Spacing="4">
                            <TextBlock Text="{local:Localize Settings_Account_PatreonAvailablePlans}" FontSize="12" FontWeight="SemiBold"/>
                            <TextBlock Text="{local:Localize Settings_Account_PatreonPlanStandard}" FontSize="11" Foreground="{DynamicResource TextFillColorSecondaryBrush}"/>
                            <TextBlock Text="{local:Localize Settings_Account_PatreonPlanPro}" FontSize="11" Foreground="{DynamicResource TextFillColorSecondaryBrush}"/>
                            <TextBlock Text="{local:Localize Settings_Account_PatreonPlanPremia}" FontSize="11" Foreground="{DynamicResource TextFillColorSecondaryBrush}"/>
                        </StackPanel>
                    </StackPanel>
                </Border>
            </StackPanel>

            <Separator Margin="0,8"/>

            <!-- Not Logged In State (従来のログイン) -->
            <StackPanel IsVisible="{Binding !IsLoggedIn}" Spacing="16">
                <TextBlock Text="{local:Localize Settings_Account_EmailLoginOptional}" FontSize="16" FontWeight="SemiBold"/>

                <!-- Info Card -->
                <Border Background="{DynamicResource CardBackgroundFillColorDefaultBrush}"
                        CornerRadius="8"
                        Padding="20">
                    <StackPanel Spacing="12" HorizontalAlignment="Center">
                        <PathIcon Data="M12,4A4,4 0 0,1 16,8A4,4 0 0,1 12,12A4,4 0 0,1 8,8A4,4 0 0,1 12,4M12,14C16.42,14 20,15.79 20,18V20H4V18C4,15.79 7.58,14 12,14Z"
                                  Width="48" Height="48"
                                  Foreground="{DynamicResource TextFillColorSecondaryBrush}"/>
                        <TextBlock Text="{local:Localize Settings_Account_NotLoggedIn}"
                                   FontSize="16"
                                   FontWeight="SemiBold"
                                   HorizontalAlignment="Center"/>
                        <TextBlock Text="{local:Localize Settings_Account_LoginBenefits}"
                                   FontSize="12"
                                   Foreground="{DynamicResource TextFillColorSecondaryBrush}"
                                   TextWrapping="Wrap"
                                   TextAlignment="Center"
                                   MaxWidth="300"/>
                    </StackPanel>
                </Border>

                <!-- Auth Buttons -->
                <StackPanel Spacing="12">
                    <Button Content="{local:Localize Settings_Account_Login}"
                            Command="{Binding LoginCommand}"
                            HorizontalAlignment="Stretch"
                            HorizontalContentAlignment="Center"
                            Classes="accent"
                            Padding="16,12"/>

                    <Button Content="{local:Localize Settings_Account_Signup}"
                            Command="{Binding SignupCommand}"
                            HorizontalAlignment="Stretch"
                            HorizontalContentAlignment="Center"
                            Padding="16,12"/>
                </StackPanel>

                <!-- Password Reset Link -->
                <Button Content="{local:Localize Settings_Account_ForgotPassword}"
                        Command="{Binding ShowPasswordResetFormCommand}"
                        Classes="hyperlink"
                        HorizontalAlignment="Center"
                        Margin="0,8,0,0"/>
            </StackPanel>

            <!-- Password Reset Form (shown when requested) -->
            <Border IsVisible="{Binding ShowPasswordResetForm}"
                    Background="{DynamicResource CardBackgroundFillColorDefaultBrush}"
                    CornerRadius="8"
                    Padding="20">
                <StackPanel Spacing="16">
                    <StackPanel Spacing="4">
                        <TextBlock Text="{local:Localize Settings_Account_PasswordReset}"
                                   FontSize="16"
                                   FontWeight="SemiBold"/>
                        <TextBlock Text="{local:Localize Settings_Account_PasswordResetDescription}"
                                   FontSize="12"
                                   Foreground="{DynamicResource TextFillColorSecondaryBrush}"
                                   TextWrapping="Wrap"/>
                    </StackPanel>

                    <!-- Success Message -->
                    <Border IsVisible="{Binding PasswordResetSent}"
                            Background="{DynamicResource SystemFillColorSuccessBackgroundBrush}"
                            CornerRadius="6"
                            Padding="12">
                        <StackPanel Orientation="Horizontal" Spacing="8">
                            <PathIcon Data="M21,7L9,19L3.5,13.5L4.91,12.09L9,16.17L19.59,5.59L21,7Z"
                                      Width="16" Height="16"
                                      Foreground="{DynamicResource SystemFillColorSuccessBrush}"/>
                            <TextBlock Text="{local:Localize Settings_Account_ResetEmailSent}"
                                       Foreground="{DynamicResource SystemFillColorSuccessBrush}"
                                       TextWrapping="Wrap"/>
                        </StackPanel>
                    </Border>

                    <!-- Email Input -->
                    <StackPanel Spacing="8" IsVisible="{Binding !PasswordResetSent}">
                        <TextBlock Text="{local:Localize Settings_Account_EmailAddress}" FontWeight="SemiBold"/>
                        <TextBox Text="{Binding ResetEmail}"
                                 Watermark="example@email.com"
                                 Classes="clearButton"/>
                    </StackPanel>

                    <!-- Action Buttons -->
                    <StackPanel Orientation="Horizontal" Spacing="12" HorizontalAlignment="Right">
                        <Button Content="{local:Localize Common_Cancel}"
                                Command="{Binding HidePasswordResetFormCommand}"
                                Width="100"/>
                        <Button Content="{local:Localize Common_Submit}"
                                Command="{Binding SendPasswordResetCommand}"
                                Classes="accent"
                                Width="100"
                                IsVisible="{Binding !PasswordResetSent}"/>
                    </StackPanel>
                </StackPanel>
            </Border>
        </StackPanel>
    </ScrollViewer>
</UserControl>
