<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="using:Baketa.UI.ViewModels"
        xmlns:crash="using:Baketa.Core.Abstractions.CrashReporting"
        x:Class="Baketa.UI.Views.CrashReportDialogWindow"
        Title="{Binding WindowTitle}"
        Width="560"
        MinHeight="380"
        MaxHeight="650"
        SizeToContent="Height"
        WindowStartupLocation="CenterScreen"
        CanResize="False"
        ShowInTaskbar="True"
        Topmost="True"
        x:DataType="vm:CrashReportDialogViewModel">

    <Window.Styles>
        <Style Selector="Button">
            <Setter Property="Padding" Value="16,8"/>
            <Setter Property="MinWidth" Value="120"/>
        </Style>
    </Window.Styles>

    <Grid RowDefinitions="Auto,Auto,*,Auto,Auto" Margin="20">
        <!-- Header -->
        <StackPanel Grid.Row="0" Spacing="8">
            <StackPanel Orientation="Horizontal" Spacing="12">
                <TextBlock Text="&#x26A0;"
                           FontSize="28"
                           Foreground="{DynamicResource SystemFillColorCautionBrush}"
                           VerticalAlignment="Center"/>
                <TextBlock Text="{Binding HeaderText}"
                           FontSize="18"
                           FontWeight="SemiBold"
                           VerticalAlignment="Center"/>
            </StackPanel>
            <TextBlock Text="{Binding DescriptionText}"
                       TextWrapping="Wrap"
                       Foreground="{DynamicResource TextFillColorSecondaryBrush}"
                       Margin="0,8,0,0"/>
        </StackPanel>

        <!-- Privacy Note -->
        <Border Grid.Row="1"
                Margin="0,16,0,0"
                Padding="12"
                Background="{DynamicResource SystemFillColorNeutralBackgroundBrush}"
                CornerRadius="4">
            <TextBlock Text="{Binding PrivacyNote}"
                       TextWrapping="Wrap"
                       FontSize="12"
                       Foreground="{DynamicResource TextFillColorSecondaryBrush}"/>
        </Border>

        <!-- Crash Details List -->
        <Border Grid.Row="2"
                Margin="0,16"
                BorderBrush="{DynamicResource TextControlBorderBrush}"
                BorderThickness="1"
                CornerRadius="4"
                Background="{DynamicResource SettingsCardBackground}"
                MinHeight="150">
            <DockPanel>
                <TextBlock DockPanel.Dock="Top"
                           Text="{Binding CrashDetailsTitle}"
                           FontWeight="Medium"
                           Margin="12,8"/>
                <ListBox ItemsSource="{Binding CrashReports}"
                         Background="Transparent"
                         BorderThickness="0"
                         Margin="4,0,4,4">
                    <ListBox.ItemTemplate>
                        <DataTemplate x:DataType="crash:CrashReportSummary">
                            <Border Padding="8,6"
                                    Margin="0,2"
                                    Background="#10000000"
                                    CornerRadius="4">
                                <Grid ColumnDefinitions="*,Auto">
                                    <StackPanel Grid.Column="0" Spacing="2">
                                        <TextBlock Text="{Binding ExceptionType}"
                                                   FontWeight="Medium"
                                                   Foreground="{DynamicResource SystemFillColorCriticalBrush}"/>
                                        <TextBlock Text="{Binding ExceptionMessage}"
                                                   TextWrapping="Wrap"
                                                   FontSize="12"
                                                   Opacity="0.8"
                                                   MaxLines="2"
                                                   TextTrimming="CharacterEllipsis"/>
                                    </StackPanel>
                                    <TextBlock Grid.Column="1"
                                               Text="{Binding CrashedAt, StringFormat={}{0:MM/dd HH:mm}}"
                                               Opacity="0.6"
                                               FontSize="11"
                                               VerticalAlignment="Top"
                                               Margin="8,0,0,0"/>
                                </Grid>
                            </Border>
                        </DataTemplate>
                    </ListBox.ItemTemplate>
                </ListBox>
            </DockPanel>
        </Border>

        <!-- Options -->
        <StackPanel Grid.Row="3" Spacing="8" Margin="0,0,0,16">
            <CheckBox Content="{Binding IncludeSystemInfoLabel}"
                      IsChecked="{Binding IncludeSystemInfo}"/>
            <CheckBox Content="{Binding IncludeLogsLabel}"
                      IsChecked="{Binding IncludeLogs}"/>
        </StackPanel>

        <!-- Buttons -->
        <Grid Grid.Row="4" ColumnDefinitions="*,Auto,Auto">
            <Button Grid.Column="1"
                    Content="{Binding DontSendButtonText}"
                    Command="{Binding DontSendCommand}"
                    Margin="0,0,8,0"/>
            <Button Grid.Column="2"
                    Content="{Binding SendButtonText}"
                    Command="{Binding SendCommand}"
                    Classes="accent"/>
        </Grid>
    </Grid>
</Window>
