{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning",
      "Baketa.Infrastructure.Translation": "Debug",
      "Baketa.Infrastructure.Platform.Windows.Capture": "Information",
      "Baketa.Infrastructure.Platform.Windows.WindowsImageFactory": "Information", 
      "Baketa.Infrastructure.Platform": "Debug",
      "Baketa.Infrastructure.OCR": "Debug",
      "Baketa.Core": "Debug",
      "Baketa.Application.Services.Capture": "Information",
      "Baketa.Application": "Debug",
      "Baketa.UI": "Debug",
      "Baketa.Infrastructure.OCR.PostProcessing.TimedChunkAggregator": "Information",
      "Baketa.Infrastructure.OCR.BatchProcessing.EnhancedBatchOcrIntegrationService": "Information"
    }
  },
  "SentencePiece": {
    "EnableDebugLogging": true
  },
  "Translation": {
    "EnableDebugLogging": true
  },
  "GeminiApi": {
    "EnableDebugLogging": true,
    "EnableCostMonitoring": false,
    "MaxDailyCostUsd": 1.0
  },
  "TranslationEngineStatus": {
    "MonitoringIntervalSeconds": 10
  },
  "OCR": {
    "EnableDebugLogging": true,
    "LogModelInfo": true,
    "LogPerformanceMetrics": true,
    "PaddleOCR": {
      "EnableHybridMode": true,
      "Language": "jpn",
      "DetectionThreshold": 0.6,
      "RecognitionThreshold": 0.3,
      "UseGpu": false,
      "EnableMultiThread": false,
      "WorkerCount": 1,
      "UseLanguageModel": false,
      "EnablePreprocessing": true
    }
  },
  "DebugOptions": {
    "EnableVerboseP/InvokeLogging": true,
    "LogMarshallingErrors": true,
    "EnableExceptionStackTrace": true
  },
  "TimedAggregator": {
    "IsFeatureEnabled": true,
    "BufferDelayMs": 150,
    "MaxChunkCount": 50,
    "ForceFlushMs": 3000,
    "EnablePerformanceLogging": true,
    "PerformanceLogInterval": 5
  }
}
