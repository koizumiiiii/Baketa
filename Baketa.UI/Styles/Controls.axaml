<Styles xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    
    <!-- メニューアイテムスタイル -->
    <Style Selector="MenuItem">
        <Setter Property="Padding" Value="8,4" />
        <Setter Property="Foreground" Value="{DynamicResource TextPrimaryBrush}" />
    </Style>
    
    <Style Selector="MenuItem:pointerover /template/ ContentPresenter">
        <Setter Property="Background" Value="{DynamicResource PrimaryLightBrush}" />
        <Setter Property="TextBlock.Foreground" Value="{DynamicResource TextOnPrimaryBrush}" />
    </Style>
    
    <Style Selector="MenuItem:selected /template/ ContentPresenter">
        <Setter Property="Background" Value="{DynamicResource PrimaryBrush}" />
        <Setter Property="TextBlock.Foreground" Value="{DynamicResource TextOnPrimaryBrush}" />
    </Style>
    
    <Style Selector="Menu > MenuItem">
        <Setter Property="Padding" Value="12,6" />
    </Style>
    
    <!-- タブコントロールスタイル -->
    <Style Selector="TabControl">
        <Setter Property="Padding" Value="0" />
        <Setter Property="Background" Value="{DynamicResource BackgroundBrush}" />
    </Style>
    
    <Style Selector="TabItem">
        <Setter Property="FontSize" Value="{DynamicResource FontSizeNormal}" />
        <Setter Property="Padding" Value="16,8" />
        <Setter Property="Margin" Value="0" />
        <Setter Property="Foreground" Value="{DynamicResource TextPrimaryBrush}" />
    </Style>
    
    <Style Selector="TabItem:selected">
        <Setter Property="Background" Value="{DynamicResource PrimaryBrush}" />
        <Setter Property="Foreground" Value="{DynamicResource TextOnPrimaryBrush}" />
    </Style>
    
    <Style Selector="TabItem:pointerover /template/ ContentPresenter">
        <Setter Property="Background" Value="{DynamicResource PrimaryLightBrush}" />
        <Setter Property="TextBlock.Foreground" Value="{DynamicResource TextOnPrimaryBrush}" />
    </Style>
    
    <Style Selector="TabItem:selected /template/ ContentPresenter">
        <Setter Property="Background" Value="{DynamicResource PrimaryBrush}" />
        <Setter Property="TextBlock.Foreground" Value="{DynamicResource TextOnPrimaryBrush}" />
    </Style>
    
    <!-- 左側タブスタイル -->
    <Style Selector="TabControl[TabStripPlacement=Left]">
        <Setter Property="Padding" Value="0" />
    </Style>
    
    <Style Selector="TabControl[TabStripPlacement=Left] > TabItem">
        <Setter Property="Padding" Value="12" />
        <Setter Property="MinHeight" Value="48" />
        <Setter Property="Margin" Value="0,2" />
        <Setter Property="CornerRadius" Value="8,0,0,8" />
    </Style>
    
    <!-- プログレスバースタイル -->
    <Style Selector="ProgressBar">
        <Setter Property="Height" Value="8" />
        <Setter Property="Foreground" Value="{DynamicResource PrimaryBrush}" />
        <Setter Property="Background" Value="{DynamicResource BackgroundDarkBrush}" />
    </Style>
    
    <!-- コンボボックススタイル -->
    <Style Selector="ComboBox">
        <Setter Property="Padding" Value="8,4" />
        <Setter Property="MinHeight" Value="36" />
        <Setter Property="Foreground" Value="{DynamicResource TextPrimaryBrush}" />
        <Setter Property="Background" Value="{DynamicResource BackgroundLightBrush}" />
        <Setter Property="BorderBrush" Value="{DynamicResource PrimaryBrush}" />
        <Setter Property="BorderThickness" Value="1" />
        <Setter Property="CornerRadius" Value="4" />
    </Style>
    
    <Style Selector="ComboBox:pointerover /template/ Border">
        <Setter Property="BorderBrush" Value="{DynamicResource PrimaryLightBrush}" />
        <Setter Property="BorderThickness" Value="1" />
    </Style>
    
    <Style Selector="ComboBox:focus /template/ Border">
        <Setter Property="BorderBrush" Value="{DynamicResource PrimaryBrush}" />
        <Setter Property="BorderThickness" Value="2" />
    </Style>
    
    <!-- テキストボックススタイル -->
    <Style Selector="TextBox">
        <Setter Property="Padding" Value="8,6" />
        <Setter Property="MinHeight" Value="36" />
        <Setter Property="CornerRadius" Value="4" />
        <Setter Property="Foreground" Value="{DynamicResource TextPrimaryBrush}" />
        <Setter Property="CaretBrush" Value="{DynamicResource PrimaryBrush}" />
        <Setter Property="SelectionBrush" Value="{DynamicResource PrimaryLightBrush}" />
        <Setter Property="SelectionForegroundBrush" Value="{DynamicResource TextOnPrimaryBrush}" />
    </Style>
    
    <Style Selector="TextBox:focus /template/ Border">
        <Setter Property="BorderBrush" Value="{DynamicResource PrimaryBrush}" />
        <Setter Property="BorderThickness" Value="2" />
    </Style>
    
    <!-- チェックボックススタイル -->
    <Style Selector="CheckBox">
        <Setter Property="Foreground" Value="{DynamicResource TextPrimaryBrush}" />
    </Style>
    
    <Style Selector="CheckBox:checked /template/ Border">
        <Setter Property="Background" Value="{DynamicResource PrimaryBrush}" />
        <Setter Property="BorderBrush" Value="{DynamicResource PrimaryBrush}" />
    </Style>
    
    <Style Selector="CheckBox:pointerover /template/ Border">
        <Setter Property="BorderBrush" Value="{DynamicResource PrimaryLightBrush}" />
    </Style>
    
    <!-- ラジオボタンスタイル -->
    <Style Selector="RadioButton">
        <Setter Property="Foreground" Value="{DynamicResource TextPrimaryBrush}" />
    </Style>
    
    <Style Selector="RadioButton:checked /template/ Ellipse#CheckGlyph">
        <Setter Property="Fill" Value="{DynamicResource PrimaryBrush}" />
    </Style>
    
    <Style Selector="RadioButton:pointerover /template/ Ellipse">
        <Setter Property="Stroke" Value="{DynamicResource PrimaryLightBrush}" />
    </Style>
    
    <!-- ツールチップスタイル -->
    <Style Selector="ToolTip">
        <Setter Property="Background" Value="{DynamicResource BackgroundDarkBrush}" />
        <Setter Property="Foreground" Value="{DynamicResource TextPrimaryBrush}" />
        <Setter Property="Padding" Value="8,4" />
        <Setter Property="CornerRadius" Value="4" />
    </Style>
    
    <!-- リストボックススタイル -->
    <Style Selector="ListBox">
        <Setter Property="Background" Value="{DynamicResource BackgroundLightBrush}" />
        <Setter Property="BorderBrush" Value="{DynamicResource BackgroundDarkBrush}" />
        <Setter Property="BorderThickness" Value="1" />
        <Setter Property="CornerRadius" Value="4" />
    </Style>
    
    <Style Selector="ListBoxItem">
        <Setter Property="Padding" Value="8,4" />
    </Style>
    
    <Style Selector="ListBoxItem:selected /template/ ContentPresenter">
        <Setter Property="Background" Value="{DynamicResource PrimaryBrush}" />
        <Setter Property="TextBlock.Foreground" Value="{DynamicResource TextOnPrimaryBrush}" />
    </Style>
    
    <Style Selector="ListBoxItem:pointerover /template/ ContentPresenter">
        <Setter Property="Background" Value="{DynamicResource PrimaryLightBrush}" />
        <Setter Property="TextBlock.Foreground" Value="{DynamicResource TextOnPrimaryBrush}" />
    </Style>
    
    <!-- スクロールバースタイル -->
    <Style Selector="ScrollBar">
        <Setter Property="Background" Value="Transparent" />
    </Style>
    
    <Style Selector="ScrollBar:horizontal">
        <Setter Property="Height" Value="8" />
    </Style>
    
    <Style Selector="ScrollBar:vertical">
        <Setter Property="Width" Value="8" />
    </Style>
    
    <Style Selector="ScrollBar /template/ Thumb">
        <Setter Property="Background" Value="{DynamicResource BackgroundDarkBrush}" />
        <Setter Property="CornerRadius" Value="4" />
    </Style>
    
    <Style Selector="ScrollBar /template/ Thumb:pointerover">
        <Setter Property="Background" Value="{DynamicResource PrimaryLightBrush}" />
    </Style>
    
    <Style Selector="ScrollBar /template/ Thumb:pressed">
        <Setter Property="Background" Value="{DynamicResource PrimaryBrush}" />
    </Style>
    
    <!-- カードパネルスタイル -->
    <Style Selector="Border.card">
        <Setter Property="Background" Value="{DynamicResource BackgroundLightBrush}" />
        <Setter Property="BorderBrush" Value="{DynamicResource BackgroundDarkBrush}" />
        <Setter Property="BorderThickness" Value="1" />
        <Setter Property="CornerRadius" Value="8" />
        <Setter Property="Padding" Value="16" />
        <Setter Property="Margin" Value="8" />
        <Setter Property="BoxShadow" Value="0 2 4 #20000000" />
    </Style>

    <!-- 翻訳エンジン設定専用スタイル -->
    
    <!-- エンジン選択ラジオボタン -->
    <Style Selector="RadioButton.engine-radio">
        <Setter Property="Margin" Value="0,0,0,15" />
        <Setter Property="Padding" Value="15" />
        <Setter Property="BorderBrush" Value="{DynamicResource BackgroundDarkBrush}" />
        <Setter Property="BorderThickness" Value="1" />
        <Setter Property="CornerRadius" Value="8" />
        <Setter Property="Background" Value="{DynamicResource BackgroundLightBrush}" />
    </Style>

    <Style Selector="RadioButton.engine-radio:checked">
        <Setter Property="BorderBrush" Value="{DynamicResource PrimaryBrush}" />
        <Setter Property="Background" Value="{DynamicResource PrimaryVeryLightBrush}" />
        <Setter Property="BorderThickness" Value="2" />
    </Style>

    <Style Selector="RadioButton.engine-radio:pointerover">
        <Setter Property="BorderBrush" Value="{DynamicResource PrimaryLightBrush}" />
    </Style>

    <!-- 説明テキスト -->
    <Style Selector="TextBlock.description">
        <Setter Property="FontSize" Value="12" />
        <Setter Property="Foreground" Value="{DynamicResource TextSecondaryBrush}" />
        <Setter Property="Margin" Value="0,2,0,0" />
    </Style>

    <!-- パフォーマンス情報 -->
    <Style Selector="TextBlock.performance">
        <Setter Property="FontSize" Value="11" />
        <Setter Property="Foreground" Value="{DynamicResource SuccessBrush}" />
        <Setter Property="FontWeight" Value="Bold" />
        <Setter Property="Margin" Value="0,5,0,0" />
    </Style>

    <!-- 情報境界 -->
    <Style Selector="Border.info-border">
        <Setter Property="Background" Value="{DynamicResource BackgroundVeryLightBrush}" />
        <Setter Property="BorderBrush" Value="{DynamicResource BackgroundDarkBrush}" />
        <Setter Property="BorderThickness" Value="1" />
        <Setter Property="CornerRadius" Value="6" />
        <Setter Property="Padding" Value="12" />
    </Style>

    <!-- コスト情報 -->
    <Style Selector="TextBlock.cost-info">
        <Setter Property="FontSize" Value="12" />
        <Setter Property="Foreground" Value="{DynamicResource WarningBrush}" />
        <Setter Property="FontStyle" Value="Italic" />
    </Style>
    
    <!-- ==== リアルタイム状態表示用スタイル ==== -->
    
    <!-- エンジン状態テキスト -->
    <Style Selector="TextBlock.engine-status">
        <Setter Property="FontSize" Value="11" />
        <Setter Property="FontWeight" Value="Bold" />
        <Setter Property="Foreground" Value="{DynamicResource InfoBrush}" />
    </Style>
    
    <!-- 状態パネル -->
    <Style Selector="Border.status-panel">
        <Setter Property="Background" Value="{DynamicResource BackgroundVeryLightBrush}" />
        <Setter Property="BorderBrush" Value="{DynamicResource PrimaryLightBrush}" />
        <Setter Property="BorderThickness" Value="1" />
        <Setter Property="CornerRadius" Value="8" />
        <Setter Property="Padding" Value="15" />
    </Style>
    
    <!-- 状態アイテム -->
    <Style Selector="Border.status-item">
        <Setter Property="Background" Value="{DynamicResource BackgroundLightBrush}" />
        <Setter Property="BorderBrush" Value="{DynamicResource BackgroundDarkBrush}" />
        <Setter Property="BorderThickness" Value="1" />
        <Setter Property="CornerRadius" Value="4" />
        <Setter Property="Padding" Value="8" />
    </Style>
    
    <!-- 状態テキスト -->
    <Style Selector="TextBlock.status-text">
        <Setter Property="TextWrapping" Value="Wrap" />
        <Setter Property="Foreground" Value="{DynamicResource TextSecondaryBrush}" />
    </Style>
    
    <!-- コンパクトボタン -->
    <Style Selector="Button.compact">
        <Setter Property="Padding" Value="8,4" />
        <Setter Property="MinHeight" Value="28" />
        <Setter Property="FontSize" Value="12" />
    </Style>
    
    <Style Selector="ToggleButton.compact">
        <Setter Property="Padding" Value="8,4" />
        <Setter Property="MinHeight" Value="28" />
        <Setter Property="FontSize" Value="12" />
    </Style>
    
    <!-- ==== 言語ペア設定用スタイル ==== -->
    
    <!-- 言語ペアアイテム -->
    <Style Selector="Border.language-pair-item">
        <Setter Property="BorderBrush" Value="{DynamicResource BackgroundDarkBrush}" />
        <Setter Property="BorderThickness" Value="0,0,0,1" />
        <Setter Property="Padding" Value="5" />
    </Style>
    
    <Style Selector="Border.language-pair-item:pointerover">
        <Setter Property="Background" Value="{DynamicResource PrimaryVeryLightBrush}" />
    </Style>
    
    <!-- ミニボタン -->
    <Style Selector="Button.mini">
        <Setter Property="Padding" Value="4,2" />
        <Setter Property="MinHeight" Value="20" />
        <Setter Property="MinWidth" Value="30" />
        <Setter Property="FontSize" Value="10" />
    </Style>
    
    <Style Selector="Button.mini.secondary">
        <Setter Property="Background" Value="{DynamicResource BackgroundLightBrush}" />
        <Setter Property="BorderBrush" Value="{DynamicResource BackgroundDarkBrush}" />
        <Setter Property="Foreground" Value="{DynamicResource TextPrimaryBrush}" />
    </Style>
    
    <Style Selector="Button.mini.danger">
        <Setter Property="Background" Value="{DynamicResource ErrorBrush}" />
        <Setter Property="BorderBrush" Value="{DynamicResource ErrorBrush}" />
        <Setter Property="Foreground" Value="White" />
    </Style>
    
    <Style Selector="Button.mini.danger:pointerover">
        <Setter Property="Background" Value="{DynamicResource ErrorDarkBrush}" />
        <Setter Property="BorderBrush" Value="{DynamicResource ErrorDarkBrush}" />
    </Style>

    <!-- ナビゲーションヘッダースタイル -->
    <Style Selector="Border.navigationHeader">
        <Setter Property="Background" Value="{DynamicResource HeaderBackground}" />
        <Setter Property="Padding" Value="16,8" />
    </Style>
    
    <!-- ステータスバースタイル -->
    <Style Selector="Border.statusBar">
        <Setter Property="Background" Value="{DynamicResource StatusBarBackground}" />
        <Setter Property="Padding" Value="16,4" />
    </Style>
    
    <!-- ==== 設定項目用スタイル ==== -->
    
    <!-- 設定項目コンテナ -->
    <Style Selector="Border.settings-item">
        <Setter Property="Background" Value="Transparent" />
        <Setter Property="BorderBrush" Value="{DynamicResource BackgroundDarkBrush}" />
        <Setter Property="BorderThickness" Value="0,0,0,1" />
        <Setter Property="Padding" Value="16,12" />
        <Setter Property="Margin" Value="0,0,0,4" />
    </Style>
    
    <Style Selector="Border.settings-item:pointerover">
        <Setter Property="Background" Value="{DynamicResource BackgroundVeryLightBrush}" />
    </Style>
    
    <!-- 設定カテゴリヘッダー -->
    <Style Selector="TextBlock.settings-category-header">
        <Setter Property="FontSize" Value="16" />
        <Setter Property="FontWeight" Value="SemiBold" />
        <Setter Property="Foreground" Value="{DynamicResource PrimaryBrush}" />
        <Setter Property="Margin" Value="0,20,0,10" />
    </Style>
    
    <!-- 設定項目タイトル -->
    <Style Selector="TextBlock.settings-title">
        <Setter Property="FontWeight" Value="SemiBold" />
        <Setter Property="Foreground" Value="{DynamicResource TextPrimaryBrush}" />
    </Style>
    
    <!-- 設定項目説明 -->
    <Style Selector="TextBlock.settings-description">
        <Setter Property="FontSize" Value="12" />
        <Setter Property="Foreground" Value="{DynamicResource TextSecondaryBrush}" />
        <Setter Property="TextWrapping" Value="Wrap" />
    </Style>
    
    <!-- 設定項目警告 -->
    <Style Selector="TextBlock.settings-warning">
        <Setter Property="FontSize" Value="11" />
        <Setter Property="Foreground" Value="{DynamicResource ErrorBrush}" />
        <Setter Property="TextWrapping" Value="Wrap" />
        <Setter Property="FontStyle" Value="Italic" />
    </Style>
    
    <!-- ナビゲーションサイドバー -->
    <Style Selector="Border.settings-navigation">
        <Setter Property="Background" Value="{DynamicResource BackgroundLightBrush}" />
        <Setter Property="BorderBrush" Value="{DynamicResource BackgroundDarkBrush}" />
        <Setter Property="BorderThickness" Value="0,0,1,0" />
    </Style>
    
    <!-- ナビゲーションアイテム -->
    <Style Selector="ListBoxItem.settings-nav-item">
        <Setter Property="Padding" Value="16,12" />
        <Setter Property="Margin" Value="4,2" />
        <Setter Property="CornerRadius" Value="6" />
    </Style>
    
    <Style Selector="ListBoxItem.settings-nav-item:selected /template/ ContentPresenter">
        <Setter Property="Background" Value="{DynamicResource PrimaryBrush}" />
        <Setter Property="TextBlock.Foreground" Value="{DynamicResource TextOnPrimaryBrush}" />
    </Style>
    
    <Style Selector="ListBoxItem.settings-nav-item:pointerover /template/ ContentPresenter">
        <Setter Property="Background" Value="{DynamicResource PrimaryLightBrush}" />
        <Setter Property="TextBlock.Foreground" Value="{DynamicResource TextOnPrimaryBrush}" />
    </Style>
    
    <!-- 設定コンテンツエリア -->
    <Style Selector="ScrollViewer.settings-content">
        <Setter Property="Padding" Value="20" />
    </Style>
    
    <!-- 設定セクション -->
    <Style Selector="StackPanel.settings-section">
        <Setter Property="Spacing" Value="8" />
        <Setter Property="Margin" Value="0,0,0,24" />
    </Style>
</Styles>