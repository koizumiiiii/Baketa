<ResourceDictionary xmlns="https://github.com/avaloniaui"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!-- フォントファミリーの定義 -->
    <!-- 日本語フォント - システムフォントベース -->
    <FontFamily x:Key="JapaneseFontFamily">Yu Gothic UI, Meiryo UI, MS UI Gothic, sans-serif</FontFamily>
    <FontFamily x:Key="JapaneseFontFamily.Thin">Yu Gothic UI Light, Meiryo UI, MS UI Gothic, sans-serif</FontFamily>
    <FontFamily x:Key="JapaneseFontFamily.Regular">Yu Gothic UI, Meiryo UI, MS UI Gothic, sans-serif</FontFamily>
    <FontFamily x:Key="JapaneseFontFamily.Bold">Yu Gothic UI Semibold, Meiryo UI, MS UI Gothic, sans-serif</FontFamily>
    <FontFamily x:Key="JapaneseFontFamily.ExtraBold">Yu Gothic UI Bold, Meiryo UI, MS UI Gothic, sans-serif</FontFamily>
    
    <!-- 英語フォント - システムフォントベース -->
    <FontFamily x:Key="EnglishFontFamily">Segoe UI, Tahoma, Arial, sans-serif</FontFamily>
    <FontFamily x:Key="EnglishFontFamily.Thin">Segoe UI Light, Tahoma, Arial, sans-serif</FontFamily>
    <FontFamily x:Key="EnglishFontFamily.Regular">Segoe UI, Tahoma, Arial, sans-serif</FontFamily>
    <FontFamily x:Key="EnglishFontFamily.Bold">Segoe UI Semibold, Tahoma, Arial, sans-serif</FontFamily>
    <FontFamily x:Key="EnglishFontFamily.ExtraBold">Segoe UI Bold, Tahoma, Arial, sans-serif</FontFamily>
    
    <!-- カスタムフォント版 -->
    <FontFamily x:Key="JapaneseFontFamily.Enhanced">avares://Baketa.UI/Assets/Fonts/LINESeedJP/LINESeedJP_OTF_Rg.otf#LINE Seed JP, Yu Gothic UI, Meiryo UI, MS UI Gothic, sans-serif</FontFamily>
    <FontFamily x:Key="JapaneseFontFamily.Thin.Enhanced">avares://Baketa.UI/Assets/Fonts/LINESeedJP/LINESeedJP_OTF_Th.otf#LINE Seed JP, Yu Gothic UI Light, Meiryo UI, MS UI Gothic, sans-serif</FontFamily>
    <FontFamily x:Key="JapaneseFontFamily.Regular.Enhanced">avares://Baketa.UI/Assets/Fonts/LINESeedJP/LINESeedJP_OTF_Rg.otf#LINE Seed JP, Yu Gothic UI, Meiryo UI, MS UI Gothic, sans-serif</FontFamily>
    <FontFamily x:Key="JapaneseFontFamily.Bold.Enhanced">avares://Baketa.UI/Assets/Fonts/LINESeedJP/LINESeedJP_OTF_Bd.otf#LINE Seed JP, Yu Gothic UI Semibold, Meiryo UI, MS UI Gothic, sans-serif</FontFamily>
    <FontFamily x:Key="JapaneseFontFamily.ExtraBold.Enhanced">avares://Baketa.UI/Assets/Fonts/LINESeedJP/LINESeedJP_OTF_Eb.otf#LINE Seed JP, Yu Gothic UI Bold, Meiryo UI, MS UI Gothic, sans-serif</FontFamily>
    
    <FontFamily x:Key="EnglishFontFamily.Enhanced">avares://Baketa.UI/Assets/Fonts/LINESeedEN/LINESeedSans_Rg.otf#LINE Seed Sans, Segoe UI, Tahoma, Arial, sans-serif</FontFamily>
    <FontFamily x:Key="EnglishFontFamily.Thin.Enhanced">avares://Baketa.UI/Assets/Fonts/LINESeedEN/LINESeedSans_Th.otf#LINE Seed Sans, Segoe UI Light, Tahoma, Arial, sans-serif</FontFamily>
    <FontFamily x:Key="EnglishFontFamily.Regular.Enhanced">avares://Baketa.UI/Assets/Fonts/LINESeedEN/LINESeedSans_Rg.otf#LINE Seed Sans, Segoe UI, Tahoma, Arial, sans-serif</FontFamily>
    <FontFamily x:Key="EnglishFontFamily.Bold.Enhanced">avares://Baketa.UI/Assets/Fonts/LINESeedEN/LINESeedSans_Bd.otf#LINE Seed Sans, Segoe UI Semibold, Tahoma, Arial, sans-serif</FontFamily>
    <FontFamily x:Key="EnglishFontFamily.ExtraBold.Enhanced">avares://Baketa.UI/Assets/Fonts/LINESeedEN/LINESeedSans_XBd.otf#LINE Seed Sans, Segoe UI Bold, Tahoma, Arial, sans-serif</FontFamily>
    
    <!-- その他言語フォント -->
    <FontFamily x:Key="ChineseFontFamily">Microsoft YaHei UI, SimHei, Yu Gothic UI, sans-serif</FontFamily>
    <FontFamily x:Key="ChineseFontFamily.Enhanced">avares://Baketa.UI/Assets/Fonts/NotoSans/NotoSansSC-Regular.ttf#Noto Sans SC, Microsoft YaHei UI, SimHei, Yu Gothic UI, sans-serif</FontFamily>

    <!-- フォールバックフォント定義 -->
    <FontFamily x:Key="FallbackFontFamily">
        Segoe UI,
        Yu Gothic UI,
        Meiryo UI,
        MS UI Gothic,
        sans-serif
    </FontFamily>
    
    <!-- カスタムフォントが利用可能な場合の定義 -->
    <FontFamily x:Key="EnhancedFallbackFontFamily">
        avares://Baketa.UI/Assets/Fonts/LINESeedJP/LINESeedJP_OTF_Rg.otf#LINE Seed JP,
        avares://Baketa.UI/Assets/Fonts/LINESeedEN/LINESeedSans_Rg.otf#LINE Seed Sans,
        avares://Baketa.UI/Assets/Fonts/NotoSans/NotoSansSC-Regular.ttf#Noto Sans SC,
        Segoe UI,
        Yu Gothic UI,
        Meiryo UI,
        MS UI Gothic,
        sans-serif
    </FontFamily>
    
    <!-- 言語別最適化フォントファミリー -->
    <FontFamily x:Key="OptimizedFontFamily.Japanese">
        Yu Gothic UI,
        Meiryo UI,
        MS UI Gothic,
        Segoe UI,
        sans-serif
    </FontFamily>
    
    <FontFamily x:Key="OptimizedFontFamily.English">
        Segoe UI,
        Yu Gothic UI,
        sans-serif
    </FontFamily>
    
    <FontFamily x:Key="OptimizedFontFamily.ChineseSimplified">
        Microsoft YaHei UI,
        SimHei,
        Yu Gothic UI,
        Segoe UI,
        sans-serif
    </FontFamily>
    
    <!-- カスタムフォント対応版 -->
    <FontFamily x:Key="OptimizedFontFamily.Japanese.Enhanced">
        avares://Baketa.UI/Assets/Fonts/LINESeedJP/LINESeedJP_OTF_Rg.otf#LINE Seed JP,
        avares://Baketa.UI/Assets/Fonts/LINESeedEN/LINESeedSans_Rg.otf#LINE Seed Sans,
        avares://Baketa.UI/Assets/Fonts/NotoSans/NotoSansSC-Regular.ttf#Noto Sans SC,
        Yu Gothic UI,
        Meiryo UI,
        MS UI Gothic,
        Segoe UI,
        sans-serif
    </FontFamily>
    
    <FontFamily x:Key="OptimizedFontFamily.English.Enhanced">
        avares://Baketa.UI/Assets/Fonts/LINESeedEN/LINESeedSans_Rg.otf#LINE Seed Sans,
        avares://Baketa.UI/Assets/Fonts/LINESeedJP/LINESeedJP_OTF_Rg.otf#LINE Seed JP,
        avares://Baketa.UI/Assets/Fonts/NotoSans/NotoSansSC-Regular.ttf#Noto Sans SC,
        Segoe UI,
        Yu Gothic UI,
        sans-serif
    </FontFamily>
    
    <FontFamily x:Key="OptimizedFontFamily.ChineseSimplified.Enhanced">
        avares://Baketa.UI/Assets/Fonts/NotoSans/NotoSansSC-Regular.ttf#Noto Sans SC,
        avares://Baketa.UI/Assets/Fonts/LINESeedJP/LINESeedJP_OTF_Rg.otf#LINE Seed JP,
        avares://Baketa.UI/Assets/Fonts/LINESeedEN/LINESeedSans_Rg.otf#LINE Seed Sans,
        Microsoft YaHei UI,
        SimHei,
        Yu Gothic UI,
        Segoe UI,
        sans-serif
    </FontFamily>

    <!-- フォントファミリーエイリアス -->
    <FontFamily x:Key="PrimaryFontFamily">{StaticResource FallbackFontFamily}</FontFamily>
    
    <!-- フォントサイズ定義 -->
    <x:Double x:Key="FontSizeSmall">12</x:Double>
    <x:Double x:Key="FontSizeNormal">14</x:Double>
    <x:Double x:Key="FontSizeMedium">16</x:Double>
    <x:Double x:Key="FontSizeLarge">18</x:Double>
    <x:Double x:Key="FontSizeHeader">20</x:Double>
    <x:Double x:Key="FontSizeTitle">24</x:Double>
</ResourceDictionary>