<Styles xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    
    <!-- 基本TextBoxスタイル -->
    <Style Selector="TextBox">
        <Setter Property="FontFamily" Value="{DynamicResource FallbackFontFamily}"/>
        <Setter Property="FontSize" Value="{DynamicResource FontSizeNormal}"/>
    </Style>
    
    <!-- 基本TextBlockスタイル -->
    <Style Selector="TextBlock">
        <Setter Property="FontFamily" Value="{DynamicResource FallbackFontFamily}"/>
        <Setter Property="FontSize" Value="{DynamicResource FontSizeNormal}"/>
        <Setter Property="TextWrapping" Value="Wrap"/>
    </Style>
    
    <!-- 基本ボタンスタイル調整 -->
    <Style Selector="Button">
        <Setter Property="FontFamily" Value="{DynamicResource FallbackFontFamily}"/>
    </Style>
    
    <!-- 基本メニューアイテムスタイル調整 -->
    <Style Selector="MenuItem">
        <Setter Property="FontFamily" Value="{DynamicResource FallbackFontFamily}"/>
    </Style>
    
    <!-- 基本タブアイテムスタイル調整 -->
    <Style Selector="TabItem">
        <Setter Property="FontFamily" Value="{DynamicResource FallbackFontFamily}"/>
    </Style>
    
    <!-- ステータスバーテキストスタイル -->
    <Style Selector="TextBlock.StatusBarTextBlockStyle">
        <Setter Property="FontFamily" Value="{DynamicResource FallbackFontFamily}"/>
        <Setter Property="FontSize" Value="{DynamicResource FontSizeSmall}"/>
        <Setter Property="Margin" Value="5,0"/>
    </Style>
    
    <!-- ヘッダーアイコンボタンスタイル -->
    <Style Selector="Button.headerIcon">
        <Setter Property="Background" Value="Transparent"/>
        <Setter Property="BorderThickness" Value="0"/>
        <Setter Property="Padding" Value="8"/>
        <Setter Property="Margin" Value="4,0"/>
    </Style>
    
    <!-- ページ遷移コンテナスタイル -->
    <Style Selector="ContentControl.pageTransition">
        <Setter Property="Transitions">
            <Transitions>
                <DoubleTransition Property="Opacity" Duration="0:0:0.3"/>
            </Transitions>
        </Setter>
    </Style>
    
    <!-- 通知ボーダースタイル -->
    <Style Selector="Border.notification">
        <Setter Property="BorderThickness" Value="1"/>
        <Setter Property="BorderBrush" Value="{DynamicResource BorderBrush}"/>
        <Setter Property="Background" Value="{DynamicResource NotificationBackground}"/>
        <Setter Property="CornerRadius" Value="4"/>
        <Setter Property="Padding" Value="8,4"/>
    </Style>
    
    <!-- フェードインアニメーション -->
    <Style Selector="Control.fadeIn">
        <Style.Animations>
            <Animation Duration="0:0:0.5" FillMode="Both">
                <KeyFrame Cue="0%">
                    <Setter Property="Opacity" Value="0" />
                </KeyFrame>
                <KeyFrame Cue="100%">
                    <Setter Property="Opacity" Value="1" />
                </KeyFrame>
            </Animation>
        </Style.Animations>
    </Style>
</Styles>