<Application xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             x:Class="Baketa.UI.App"
             xmlns:local="using:Baketa.UI"
             xmlns:vm="using:Baketa.UI.ViewModels"
             xmlns:conv="using:Baketa.UI.Converters">
             <!-- 最小限の設定、デフォルトテーマを使用 -->

    <Application.DataTemplates>
        <local:ViewLocator/>
    </Application.DataTemplates>
  
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceInclude Source="avares://Baketa.UI/Styles/TypographyTypes.axaml" />
                <ResourceInclude Source="avares://Baketa.UI/Styles/Colors.axaml" />
                <ResourceInclude Source="avares://Baketa.UI/Styles/Icons.axaml" />
            </ResourceDictionary.MergedDictionaries>
            
            <!-- コンバーター -->
            <local:EnumToIntConverter x:Key="EnumToIntConverter" />
            <local:EnumComparisonConverter x:Key="EnumComparisonConverter" />
            
            <!-- 言語ペア設定用コンバーター -->
            <conv:LanguageCodeToLanguageInfoConverter x:Key="LanguageCodeToLanguageInfoConverter" />
            <conv:TranslationStrategyConverter x:Key="TranslationStrategyConverter" />
            <conv:ChineseVariantConverter x:Key="ChineseVariantConverter" />
            <conv:BoolToBackgroundConverter x:Key="BoolToBackgroundConverter" />
            <conv:CollectionCountConverter x:Key="CollectionCountConverter" />
            <conv:CollectionAverageConverter x:Key="CollectionAverageConverter" />
            
            <!-- アクセシビリティ設定 -->
            <x:Boolean x:Key="AnimationsEnabled">True</x:Boolean>
        </ResourceDictionary>
    </Application.Resources>
  
    <Application.Styles>
        <FluentTheme />
        <StyleInclude Source="avares://Baketa.UI/Styles/BasicStyles.axaml" />
        <StyleInclude Source="avares://Baketa.UI/Styles/Buttons.axaml" />
        <StyleInclude Source="avares://Baketa.UI/Styles/Controls.axaml" />
        <StyleInclude Source="avares://Baketa.UI/Styles/Typography.axaml" />
        <!-- アニメーション定義を追加 -->
        <StyleInclude Source="avares://Baketa.UI/Styles/Animations.axaml" />
    </Application.Styles>
</Application>
