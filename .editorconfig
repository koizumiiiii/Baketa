# IDE0037: メンバーの名前を簡素化できます
dotnet_diagnostic.IDE0037.severity = silent

# IDE0042: 変数の宣言を分解できます
dotnet_diagnostic.IDE0042.severity = silent

# EditorConfig is awesome: https://EditorConfig.org

# top-most EditorConfig file
root = true

# .NET code style settings
[*.{cs,vb}]
# IDE0028: コレクション初期化の簡素化
dotnet_style_collection_initializer = true:silent
dotnet_diagnostic.IDE0028.severity = silent

# CA1515: 内部クラスの警告拒否
dotnet_diagnostic.CA1515.severity = none

# CA1812: 明らかにインスタンス化されない内部クラス
dotnet_diagnostic.CA1812.severity = none

# CA1848: LoggerMessageデリゲートの使用に関する警告抑制
dotnet_diagnostic.CA1848.severity = none

# IDE0290: プライマリコンストラクターの使用に関する警告抑制
dotnet_diagnostic.IDE0290.severity = silent

# IDE0031: Nullチェックの簡素化に関する警告抑制
dotnet_diagnostic.IDE0031.severity = none

# IDE0090: new式の簡素化
dotnet_style_object_initializer = true:silent
dotnet_diagnostic.IDE0090.severity = silent

# IDE0305: コレクション初期化の簡素化
dotnet_diagnostic.IDE0305.severity = silent

# CA1305: IFormatProviderの指定
dotnet_diagnostic.CA1305.severity = warning

# Null安全性関連の設定
dotnet_style_null_propagation = true:warning
dotnet_style_coalesce_expression = true:warning
dotnet_style_prefer_conditional_expression_over_assignment = true:suggestion
dotnet_style_prefer_is_null_check_over_reference_equality_method = true:warning
dotnet_style_prefer_auto_properties = true:warning

# usingステートメント関連の設定
csharp_using_directive_placement = outside_namespace:warning
csharp_prefer_simple_using_statement = true:warning
dotnet_diagnostic.IDE0063.severity = warning

# using ステートメントの整理（名前空間関連）
dotnet_sort_system_directives_first = true:warning
dotnet_separate_import_directive_groups = true:warning

# リソース管理関連の設定
dotnet_diagnostic.CA2000.severity = warning
dotnet_diagnostic.CA1816.severity = warning

# 未使用変数/パラメータ関連
dotnet_diagnostic.IDE0060.severity = none
dotnet_code_quality_unused_parameters = all:suggestion
dotnet_diagnostic.CS0219.severity = warning
dotnet_diagnostic.xUnit1026.severity = warning

# readonlyフィールド関連
dotnet_style_readonly_field = true:warning
dotnet_diagnostic.IDE0044.severity = warning

# 名前空間宣言の設定
csharp_style_namespace_declarations = file_scoped:warning
dotnet_diagnostic.IDE0161.severity = warning

# 名前空間命名規則
dotnet_naming_rule.namespace_naming.symbols = namespace_symbol
dotnet_naming_rule.namespace_naming.style = pascal_case_style
dotnet_naming_rule.namespace_naming.severity = warning

dotnet_naming_symbols.namespace_symbol.applicable_kinds = namespace
dotnet_naming_style.pascal_case_style.capitalization = pascal_case

# 不要な値代入回避 (ディスカードシンボル使用)
dotnet_diagnostic.IDE0059.severity = warning
csharp_style_unused_value_assignment_preference = discard_variable:warning

# if文の簡素化
dotnet_diagnostic.IDE0045.severity = warning
dotnet_style_prefer_conditional_expression_over_assignment = true:warning

# コレクションの初期化簡素化
dotnet_diagnostic.IDE0300.severity = warning
dotnet_diagnostic.IDE0301.severity = warning
dotnet_diagnostic.IDE0306.severity = warning
dotnet_style_collection_initializer = true:warning
csharp_style_collection_initializer = true:warning

# メンバーをreadonlyにする
dotnet_diagnostic.IDE0251.severity = warning
dotnet_style_readonly_field = true:warning

# パターンマッチングを使用
dotnet_diagnostic.IDE0019.severity = warning
csharp_style_pattern_matching_over_as_with_null_check = true:warning

# switch式の使用
dotnet_diagnostic.IDE0066.severity = warning
csharp_style_prefer_switch_expression = true:warning

# 名前空間はフォルダー構造と一致
dotnet_diagnostic.IDE0130.severity = warning

# プラットフォーム依存APIの警告 - Windows専用アプリケーションのため抑制
dotnet_diagnostic.CA1416.severity = none

# 警告抑制一覧 - 全プロジェクト共通

# CA1711: Wrapperサフィックスに関する警告抜別
dotnet_diagnostic.CA1711.severity = none

# CA1721: "Get"で始まるメソッド名の警告抜別 (リファクタリング計画が必要)
dotnet_diagnostic.CA1721.severity = none

# CA2227: 書き込み可能なコレクションプロパティ
dotnet_diagnostic.CA2227.severity = none

# CA1725: オーバーライド階層でのパラメーター名の不一致
dotnet_diagnostic.CA1725.severity = none

# CA2254: ログメッセージテンプレートの動的生成
dotnet_diagnostic.CA2254.severity = none

# CA1822: インスタンスメソッドをstaticにマーク可能
dotnet_diagnostic.CA1822.severity = none

# CA1819: プロパティで返される配列は書き込み禁止でない
dotnet_diagnostic.CA1819.severity = none

# CA2263: ジェネリックオーバーロードの使用
dotnet_diagnostic.CA2263.severity = none

# IDE0270: Nullチェックの簡素化
dotnet_diagnostic.IDE0270.severity = none

# === 特定のパターンに対する警告抑制 ===

# 特定の大規模リファクタリングを要するファイルは一時的に警告を抑制
[**/Services/OCR/OcrPreprocessingService.cs]
dotnet_diagnostic.IDE0301.severity = none
dotnet_diagnostic.IDE0300.severity = none

# UI関連のコンポーネントも同様に
[**/Framework/Validation/ValidationHelpers.cs]
dotnet_diagnostic.IDE0301.severity = none
dotnet_diagnostic.IDE0300.severity = none
dotnet_diagnostic.IDE0306.severity = none

# プロジェクト固有の設定
[*.cs]
# 基本設定（プロジェクトのコーディング規約に合わせて調整）
indent_style = space
indent_size = 4
end_of_line = crlf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true

# 特定ファイルに対する設定
[*OpenCvWrapper.cs]
dotnet_diagnostic.CA1711.severity = none

[*ImageFilter*.cs]
dotnet_diagnostic.CA1721.severity = none

[*TextRegionDetector*.cs]
dotnet_diagnostic.CA1721.severity = none

[*ImagePipelineTests.cs]
dotnet_diagnostic.CA1721.severity = none

[*TranslationContext.cs]
dotnet_diagnostic.IDE0251.severity = none
dotnet_diagnostic.CA1051.severity = none
