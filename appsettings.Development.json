{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning",
      "Baketa.Infrastructure.Translation": "Debug",
      "Baketa.Infrastructure.Platform.Windows.Capture": "Information",
      "Baketa.Infrastructure.Platform.Windows.WindowsImageFactory": "Information", 
      "Baketa.Infrastructure.Platform": "Debug",
      "Baketa.Infrastructure.OCR": "Debug",
      "Baketa.Core": "Debug",
      "Baketa.Application.Services.Capture": "Information",
      "Baketa.Application": "Debug",
      "Baketa.UI": "Debug"
    }
  },
  "SentencePiece": {
    "EnableDebugLogging": true
  },
  "Translation": {
    "EnableDebugLogging": true
  },
  "GeminiApi": {
    "EnableDebugLogging": true,
    "EnableCostMonitoring": false,
    "MaxDailyCostUsd": 1.0
  },
  "TranslationEngineStatus": {
    "MonitoringIntervalSeconds": 10
  },
  "OCR": {
    "EnableDebugLogging": true,
    "LogModelInfo": true,
    "LogPerformanceMetrics": true
  },
  "DebugOptions": {
    "EnableVerboseP/InvokeLogging": true,
    "LogMarshallingErrors": true,
    "EnableExceptionStackTrace": true
  }
}
